<style>
    .header-principal {
        padding: 10px;
        border: solid 1px;
        border-color: grey;
        border-radius: 5px;
        background-color: rgb(40, 57, 89);
        color: white;
        font-size: 20px;
        font-weight: bold;
        text-align: center;
    }

    .contorno {
        color: white;
        width: 100%;
        border-radius: 10px;
        border: solid 1px;
        background: linear-gradient(135deg, rgb(40, 57, 89, 1), rgb(11, 19, 58, 1));
