        font-size: 15px;
    }

    .selecao:hover {
        font-weight: bold;
        position: static;
        background-color: rgba(40, 70, 250);
        color: white;
        padding: 2px;
    }

    th {
        text-align: center;
        width: 70%;
        position: sticky;
    }


    table,
    tr {
        width: 100%;
        border-collapse: collapse;
        text-align: left;
        font-size: 15px;
        border: solid 1px;
        border-color: rgba(235, 225, 225, 0.8);
        border-left-color: white;
        border-right-color: white;
        border-top-color: white;
    }

    .quadro {
        background: white;
        border: solid 1px;
        border-color: rgba(153, 151, 151, 0.384);
        border-radius: 5px;
        width: 100%;
        height: fit-content;
        padding: 4px;
