<style>
  .icone {
    font-size: 20px;
    margin-left: 2px;
    color: black;
  }
  .icone:hover {
    color: darkgreen;
  }

  table,
  th,
  tr,
  td {
    border-collapse: collapse;
    border: rgba(120,120,120,0.5) solid 1px;
    text-align: left;
    font-size: 14px;
    font-weight: 500;
    width: fit-content;
  }
  th{
    background-color: rgb(40,50,120);
    color: white;
  }
  table{
    width: 95%;
  }
</style> 
  <h4 style="margin-left: 20px;margin-top: 40px">Controle de Acesso</h4>
  <table style="margin-left: 20px;margin-top: 20px;">
    <tr>
      <th>Usuário</th>
      <th>Nome</th>
      <th>E-mail</th>
      <th>Telefone</th>
      <th>Razazão Social</th>
      <th>Nome Fantasia</th>
      <th>Endereço</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>Tipo Admin</th>
      <th>Lib.</th>
      <th>Exp.</th>
      <th>.</th>
    </tr>
    {{#each usuarios}}
    <tr>
      <td>{{usuario}}</td>
      <td>{{nome}}</td>
      <td>{{email}}</td>
      <td>{{telefone}}</td>
      <td>{{razao}}</td>
      <td>{{fantasia}}</td>
      <td>{{endereco}}</td>
      <td>{{cidade}}</td>
      <td>{{estado}}</td>
      <td>{{ehAdmin}}</td>
      <td>{{datalib}}</td>
      <td>{{dataexp}}</td>
      <td>
        <a href='/usuario/editar/{{_id}}/' class=''><i class="bi bi-pen icone"></i></a>
        <a href='/administrador/confirmaexclusao/{{_id}}/' class=''><i class="bi bi-trash icone"></i></a>
      </td>
    </tr>
    {{else}}
    {{/each}}
  </table>
