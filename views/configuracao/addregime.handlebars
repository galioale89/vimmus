<style type='text/css'>
    .tamanhodiv {
        width: 700px;
    }
</style>

<div class="container mt-2 card">
    <label for="minutos" class='fw-bold mt-2'> Cadastro de Regime Tributário</label>
    <br>
    <form action='/configuracao/addregime' method='post'>
        <div class="row mb-2">
            <div class="col card">
                <div class="row mt-2">
                    <label for='slug' class='fw-bold col-sm-2 col-form-label col-form-label-sm'> Nome: </label>
                    <div class="col-md-4">
                        <input id='nome' name='nome' class='form-control form-control-sm'>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="row">
                            <label for='regime' class='fw-bold col-md-4 col-form-label col-form-label-sm'> Regime:
                            </label>
                            <div class="col-md-8">
                                <select name='regime' class='form-select form-select-sm'>
                                    <option>MEI</option>
                                    <option>Simples</option>
                                    <option>Lucro Real</option>
                                    <option>Lucro Presumido</option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <label for='tipo' class='fw-bold col-md-3 col-form-label col-form-label-sm mb-2'> Tipo:
                            </label>
                            <div class="col-md-8">
                                <select name='tipo' class='form-select form-select-sm'>
                                    <option>Nenhum</option>
                                    <option>Anexo III</option>
                                    <option>Anexo V</option>
                                    <option>Não Cumulativo</option>
                                    <option>Cumulativo</option>
                                </select>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <label class='fw-bold col-form-label col-form-label-sm'>Parâmetros </label>
                <div class="col-md-6">
                    <div class='row mb-2'>
                        <label class='col-md-6 col-form-label col-form-label-sm'> Fator de Redução: </label>
                        <div class="col-sm-6">
                            <input type='number' id='vlrred' name='vlrred' class='form-control form-control-sm'
                                placeholder="R$">
                        </div>
                    </div>
                    <div class='row mb-2'>
                        <label class='col-md-6 col-form-label col-form-label-sm'> Projeção de Faturamento Simples:
                        </label>
                        <div class="col-md-6">
                            <input type='number' id='prjFat' name='prjFat' class='form-control form-control-sm'
                                placeholder="R$">
                        </div>
                    </div>
                    <div class='row mb-2'>
                        <label class='col-sm-6 col-form-label col-form-label-sm'> Valor do DAS para MEI: </label>
                        <div class="col-sm-6">
                            <input type='number' id='vlrDAS' name='vlrDAS' class='form-control form-control-sm'
                                placeholder="R$">
                        </div>
                    </div>

                    <div class='row mb-2'>
                        <label class='col-sm-6 col-form-label col-form-label-sm'> Projeção de Lucro Real: </label>
                        <div class="col-sm-6">
                            <input type='number' id='prjLR' name='prjLR' class='form-control form-control-sm'
                                placeholder="R$">
                        </div>
                    </div>
                    <div class='row mb-2'>
                        <label class='col-sm-6 col-form-label col-form-label-sm'> Projeção de Faturamento Trimestral
                            para Lucro Presumido: </label>
                        <div class="col-sm-6">
                            <input type='number' id='prjLP' name='prjLP' class='form-control form-control-sm'
                                placeholder="R$">
                        </div>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="row">
                        <label class='fw-bold col-form-label col-form-label-sm'>Alíquotas </label>
                        <div class="col-md-6">
                            <div class='row mb-2'>
                                <label class='col-sm-6 col-form-label col-form-label-sm'> DAS: </label>
                                <div class="col-sm-5">
                                    <input type='number' id='alqDAS' name='alqDAS' class='form-control form-control-sm'
                                        placeholder="%">
                                </div>
                            </div>
                            <div class="row mb-2">
                                <label class='col-sm-6 col-form-label col-form-label-sm'> IRPJ: </label>
                                <div class="col-sm-5">
                                    <input type='number' id='alqIRPJ' name='alqIRPJ'
                                        class='form-control form-control-sm' placeholder="%">
                                </div>
                            </div>
                            <div class="row">
                                <label class='col-sm-6 col-form-label col-form-label-sm'> IRPJ Adicional: </label>
                                <div class="col-sm-5">
                                    <input type='number' id='alqIRPJAdd' name='alqIRPJAdd'
                                        class='form-control form-control-sm mb-2' placeholder="%">
                                </div>
                            </div>

                            <div class="row">
                                <label class='col-sm-6 col-form-label col-form-label-sm'> CSLL: </label>
                                <div class="col-sm-5">
                                    <input type='number' id='alqCSLL' name='alqCSLL'
                                        class='form-control form-control-sm mb-2 ' placeholder="%">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <label class='col-sm-4 col-form-label col-form-label-sm'> NF-s: </label>
                                <div class="col-sm-5">
                                    <input type='number' id='alqNFS' name='alqNFS'
                                        class='form-control form-control-sm mb-2 ' placeholder="%">
                                </div>
                            </div>
                            <div class="row">
                                <label class='col-sm-4 col-form-label col-form-label-sm'> ICMS: </label>
                                <div class="col-sm-5">
                                    <input type='number' id='alqICMS' name='alqICMS'
                                        class='form-control form-control-sm mb-2 ' placeholder="%">
                                </div>
                            </div>
                            <div class="row">
                                <label class='col-sm-4 col-form-label col-form-label-sm'> PIS: </label>
                                <div class="col-sm-5">
                                    <input type='text' id='alqPIS' name='alqPIS'
                                        class='form-control form-control-sm mb-2 ' placeholder="%">
                                </div>
                            </div>

                            <div class="row">
                                <label class='col-sm-4 col-form-label col-form-label-sm'> COFINS: </label>
                                <div class="col-sm-5">
                                    <input type='text' id='alqCOFINS' name='alqCOFINS'
                                        class='form-control form-control-sm mb-2' placeholder="%">
                                </div>
                            </div>
                            
                            <div class="row">
                                <label class='col-sm-4 col-form-label col-form-label-sm'> INSS CPP: </label>
                                <div class="col-sm-5">
                                    <input type='text' id='alqINSS' name='alqINSS'
                                        class='form-control form-control-sm mb-2' placeholder="%">
                                </div>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <button type='submit' class='btn btn-success'> Aplicar </button>
        </div>
    </form>
</div>