    <form method="post" action='/gerenciamento/selecao'>
        <div class="row mt-2" style="padding:20px;width: 100%;">
            <div class="row">
                <div class="lists">
                    <div class="list">
                        <label class="col-form-label col-form-label-md fw-bold text-center"
                            style="color: white">Enviado</label>
                        {{#each enviado}}
                        <div class="item-enviado" style='color: black;' draggable="true">{{seq}} - {{cliente}}</div>
                        {{/each}}
                    </div>
                    <div class="list" id='negociando'>
                        <label class="col-form-label col-form-label-md fw-bold text-center"
                            style="color: white">Negociando</label>
                        {{#each negociando}}
                        <div class="item-negociando" style='color: black;' draggable="true"><a
                                href='/gerenciamento/confirmastatus/{{id}}'>{{seq}} - {{cliente}} - {{status}}</a></div>
                        {{/each}}
                    </div>
                    <div class="list" id='baixado'>
                        <label class="col-form-label col-form-label-md fw-bold text-center"
                            style="color: white">Baixado</label>
                        {{#each baixado}}
                        <div class="item-baixado" style='color: black; cursor: default'><a
                                href='/gerenciamento/confirmabaixa/{{id}}' draggable="false">{{seq}} - {{cliente}} - {{motivo}}</a></div>                        
                        {{/each}}
                    </div>
                    <div class="list" id='ganho'>
                        <label class="col-form-label col-form-label-md fw-bold text-center"
                            style="color: white">Ganho</label>
                        {{#each ganho}}
                        <div class="item-ganho" style='color: black; cursor: default' >{{seq}} - {{cliente}}</div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <div id='dados'>
        </div>
        <div class="text-center">
            <button class='btn btn-success'  style="width: 100px;" type="submit" onclick="salvar()">Salvar</button>
        </div>
    </form>
</div>

<script>
    const list_enviado = document.querySelectorAll('.item-enviado')
    const list_negociando = document.querySelectorAll('.item-negociando')
    const lists = document.querySelectorAll('.list');
    var text
    var classe
    var n

    let draggedItem = null;

    for (let i = 0; i < list_enviado.length; i++) {
        const item = list_enviado[i];

        item.addEventListener('dragstart', function () {
            draggedItem = item;
            setTimeout(function () {
                item.style.display = 'none';
            }, 0)
        });

        item.addEventListener('dragend', function () {
            n = document.getElementById('negociando')
            text = String(n.innerHTML)
            if (text.indexOf("item-enviado") > -1) {
                classe = 'item-negociando'
            }
            n = document.getElementById('baixado')
            text = String(n.innerHTML)
            if ((text.indexOf("item-enviado") > -1) || (text.indexOf("item-negociando") > -1)) {
                classe = 'item-baixado'
            }
            n = document.getElementById('ganho')
            text = String(n.innerHTML)
            if ((text.indexOf("item-enviado") > -1) || (text.indexOf("item-negociando") > -1)) {
                classe = 'item-ganho'
            }
            this.className = classe
            setTimeout(function () {
                draggedItem.style.display = 'block'
                draggedItem = null;
            }, 0);
        })

        for (let j = 0; j < lists.length; j++) {
            const list = lists[j];

            list.addEventListener('dragover', function (e) {
                e.preventDefault();
            });

            list.addEventListener('dragenter', function (e) {
                e.preventDefault();
                this.style.backgroundColor = 'rgba(40, 55, 89, 1)';
            });

            list.addEventListener('dragleave', function (e) {
                this.style.backgroundColor = 'rgba(40, 55, 86, 1)';
            });

            list.addEventListener('drop', function (e) {
                this.append(draggedItem);
                this.style.backgroundColor = 'rgba(40, 55, 86, 1)';
            });
        }
    }

    if (list_negociando.length > 0 || list_negociando.length != '') {

        for (let x = 0; x < list_negociando.length; x++) {
            const negociando = list_negociando[x]
            
            negociando.addEventListener('dragstart', function () {
                draggedItem = negociando;
                setTimeout(function () {
                    item.style.display = 'none';
                }, 0)
            });

            negociando.addEventListener('dragend', function () {
                n = document.getElementById('negociando')
                text = String(n.innerHTML)
                if (text.indexOf("item-enviado") > -1) {
                    classe = 'item-negociando'
                }
                n = document.getElementById('baixado')
                text = String(n.innerHTML)
                if ((text.indexOf("item-enviado") > -1) || (text.indexOf("item-negociando") > -1)) {
                    classe = 'item-baixado'
                }
                n = document.getElementById('ganho')
                text = String(n.innerHTML)
                if ((text.indexOf("item-enviado") > -1) || (text.indexOf("item-negociando") > -1)) {
                    classe = 'item-ganho'
                }
                this.className = classe

                setTimeout(function () {
                    draggedItem.style.display = 'block';
                    draggedItem = null;
                }, 0);
            })

            for (let y = 0; y < lists.length; y++) {
                const list = lists[y];

                list.addEventListener('dragover', function (e) {
                    e.preventDefault();
                });

                list.addEventListener('dragenter', function (e) {
                    e.preventDefault();
                    this.style.backgroundColor = 'rgba(40, 55, 86, 1)';
                });

                list.addEventListener('dragleave', function (e) {
                    this.style.backgroundColor = 'rgba(40, 55, 86, 1)';
                });

                list.addEventListener('drop', function (e) {
                    console.log('drop');
                    this.append(draggedItem);
                    this.style.backgroundColor = 'rgba(40, 55, 86, 1)';
                });
            }
        }
    }
</script>