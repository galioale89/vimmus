<style>
    button {
        line-height: 0px;
    }

    #header {
        width: 100%;
        border-bottom: rgb(40, 55, 86) 0, 1px solid;
        color: rgb(40, 55, 86);
    }

    .filtro-selecao {
        width: fit-content;
        height: fit-content;
        background: white;
        border: solid 1px;
        border-radius: 10px;
        margin-left: 5px;
    }

    table {
        width: 100%;
    }

    th {
        text-align: center;
    }

    tr {
        font-size: 12px;
        border-bottom: rgba(120, 120, 120, 0.4) solid 1px;
    }
</style>
<div class='row' style="width: 100%;padding-left: 2%;">
    <div id='header'>
        <div class="row mt-4">
            <form action='/gerenciamento/filtrar/' method='post'>
                <div class="col-md-4">
                    <h5 class="mt-2 titulo-inicio">Lista de Propostas {{titulo}}</h5>
                    <input type="hidden" name='tipo' value='{{tipo}}'>
                </div>
                <div class="row" style="margin-left: 10px">
                    {{#if lista}}
                    <div class="col-md-3">
                        <label class='col-form-label col-form-label-sm fw-bold'>Status</label>
                        <select class='form-select form-select-sm' name='stats'>
                            <option>Todos</option>
                            <option>Proposta Enviada</option>
                            <option>Preparado para a Vistoria</option>
                            <option>Vistoria</option>
                            <option>Assinado</option>
                            <option>Pedido de Compra</option>
                            <option>NF de Compra</option>
                            <option>TRT</option>
                            <option>Protocolado</option>
                            <option>Execução a Campo</option>
                            <option>Almoxarifado Em Aberto</option>
                            <option>Almoxarifado Fechado</option>
                            <option>Faturado</option>
                            <option>Pós-Venda</option>
                            <option>Encerrado</option>
                        </select>
                    </div>
                    {{/if}}
                    <div class='col-md-3'>
                        <label class='col-form-label col-form-label-sm fw-bold'>Responsável</label>
                        <select name='responsavel' class='form-select form-select-sm'>
                            <option>Todos</option>
                            {{#each todos_responsaveis}}
                            <option value='{{_id}}'>{{nome}}</option>
                            {{else}}
                            <option>Nenhum responsável cadastrato</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class='col-md-3'>
                        <label class='col-form-label col-form-label-sm fw-bold'>Cliente</label>
                        <select name='cliente' class='form-select form-select-sm'>
                            <option>Todos</option>
                            {{#each todos_clientes}}
                            <option value='{{_id}}'>{{nome}}</option>
                            {{else}}
                            <option>Nenhum cliente cadastrato</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-md-1">
                        <button type='submit' class='mt-3 botaofiltrar'><i
                                class='bi bi-search iconefiltrar'></i></button>
                    </div>
                </div>
                <div class="row mt-4">
                    {{#if lista}}
                    {{#if filtroStatus}}
                    <div class='filtro-selecao' style="margin-left: 30px;">Status: {{filtroStatus}}</div>
                    {{else}}
                    <div class='filtro-selecao' style="margin-left: 30px;">Status: Todos</div>
                    {{/if}}
                    {{/if}}
                    {{#if nomeResponsavel}}
                    <div class='filtro-selecao'>Responsável: {{nomeResponsavel}}</div>
                    {{else}}
                    <div class='filtro-selecao'>Responsável: Todos</div>
                    {{/if}}                    
                    {{#if nomeCliente}}
                    <div class='filtro-selecao'>Cliente: {{nomeCliente}}</div>
                    {{else}}
                    <div class='filtro-selecao'>Responsável: Todos</div>
                    {{/if}}
                </div>
            </form>
        </div>
        {{!-- <div class="row mt-4">
            <div class='filtro-selecao' style="margin-left: 30px;">Classificação: {{classificacao}}</div>
            <div class='filtro-selecao'>Realizado: {{filStatus}}</div>
            {{#if pr.nome}}
            <div class='filtro-selecao'>Responsável: {{pr.nome}}</div>
            {{else}}
            <div class='filtro-selecao'>Responsável: Todos</div>
            {{/if}}
        </div> --}}
    </div>

    <div style="margin-bottom: 4%;margin-top: 1%;">
        <table>
            <tr>
                {{#if lista}}
                <th style="width: 7%;">Status</th>
                {{/if}}
                <th style="width: 5%;">Proposta</th>
                <th style="width: 10%;">Cliente</th>
                <th style="width: 10%;">Responsável</th>
                <th style="width: 5%">Data Cadastro</th>
                <th style="width: 10%">Data Inicio Instalação</th>
                <th style="width: 6%">Data Fim Instalação</th>
                <th style="width: 5%;"></th>
            </tr>
            {{#each lista}}
            <tr style="line-height: 20px;">
                <td style="text-align: center;">{{s}}</td>
                <td style="text-align: center;">{{id}}</td>
                <td style="text-align: center;">{{cliente}}</td>
                <td style="text-align: center;">{{responsavel}}</td>
                <td style="text-align: center;">{{cadastro}}</td>
                <td style="text-align: center;">{{inicio}}</td>
                <td style="text-align: center;">{{fim}}</td>
                <td>
                    <div class='btn-group btn-group-sm col-12 gap-2 mx-auto'>
                        <a href='/gerenciamento/proposta/{{_id}}' class='botao-tabela ativado-tabela'><i
                                class="bi bi-pen icone"></i></a>
                    </div>
                </td>
            </tr>
            {{else}}
            {{#each listaOrcado}}
            <tr style="line-height: 20px;">
            <td style="text-align: center;">{{id}}</td>
            <td style="text-align: center;">{{cliente}}</td>
            <td style="text-align: center;">{{responsavel}}</td>
            <td style="text-align: center;">{{cadastro}}</td>
            <td style="text-align: center;">{{inicio}}</td>
            <td style="text-align: center;">{{fim}}</td>
                <td>
                    <div class='btn-group btn-group-sm col-12 gap-2 mx-auto'>
                        <a href='/gerenciamento/proposta/{{_id}}' class='botao-tabela ativado-tabela'><i
                                class="bi bi-pen icone"></i></a>
                    </div>
                </td>       
            </tr>     
            {{else}}
            {{#each listaAberto}}
            <tr style="line-height: 20px;">
            <td style="text-align: center;">{{id}}</td>
            <td style="text-align: center;">{{cliente}}</td>
            <td style="text-align: center;">{{responsavel}}</td>
            <td style="text-align: center;">{{cadastro}}</td>
            <td style="text-align: center;">{{inicio}}</td>
            <td style="text-align: center;">{{fim}}</td>
                <td>
                    <div class='btn-group btn-group-sm col-12 gap-2 mx-auto'>
                        <a href='/gerenciamento/proposta/{{_id}}' class='botao-tabela ativado-tabela'><i
                                class="bi bi-pen icone"></i></a>
                    </div>
                </td>           
            </tr> 
            {{else}}
            {{#each listaEncerrado}}
            <tr style="line-height: 20px;">
            <td style="text-align: center;">{{id}}</td>
            <td style="text-align: center;">{{cliente}}</td>
            <td style="text-align: center;">{{responsavel}}</td>
            <td style="text-align: center;">{{cadastro}}</td>
            <td style="text-align: center;">{{inicio}}</td>
            <td style="text-align: center;">{{fim}}</td>
                <td>
                    <div class='btn-group btn-group-sm col-12 gap-2 mx-auto'>
                        <a href='/gerenciamento/proposta/{{_id}}' class='botao-tabela ativado-tabela'><i
                                class="bi bi-pen icone"></i></a>
                    </div>
                </td>   
            </tr>         
            {{else}}
            <h6>Nenhum projeto encontrado.</h6>
            {{/each}}
            {{/each}}
            {{/each}}
            {{/each}}
        </table>
    </div>
</div>