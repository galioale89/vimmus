                            target="_blank"><i class='bi bi-eye'></i></a>
                    </div>
                </div>
            </form>

            <form action='/gerenciamento/salvarTrifilar' enctype="multipart/form-data" method="post">
                <input type='hidden' name='id' value='{{proposta._id}}'>
                <div class="row">
                    <div class="row">
                        <div class='col-md-2'>
                            <label class="col-form-label">Diagrama Trifilar:</label>
                        </div>
