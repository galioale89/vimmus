  <div class='col-md-7'>
    <div style="width: 100%;">
      <table class='mt-1 mb-1 'style="width: 100%;">
        <tr>
          <td style="background-color: rgba(255, 255, 0, 0.2);text-align: center;">
            <label style="font-size: 20px;font-weight: bold;">Aberto</label>
            <div class='sessao-status-aberto mb-2' style="margin-left: 30%;">
              <label style="font-size: 20px;font-weight: bold;">{{qtdAberto}}</label>
            </div>
          </td>
          <td style="background-color:rgba(0, 255, 67,0.2);text-align: center;border-left: white 5px solid;">
            <label style="font-size: 20px;font-weight: bold;">Em execução</label>
            <div class='sessao-status-execucao mb-2' style="margin-left: 40%;">
              <label style="font-size: 20px;font-weight: bold;">{{qtdExecucao}}</label>
            </div>
          </td>
          <td style="background-color:  rgba(245, 22, 22, 0.2);text-align: center;border-left: white 5px solid;">
            <label style="font-size: 20px;font-weight: bold;">Parado</label>
            <div class='sessao-status-parado mb-2' style="margin-left: 32%;">
              <label style="font-size: 20px;font-weight: bold;">{{qtdParado}}</label>
            </div>
          </td>
          <td style="background-color:  rgba(255, 136, 0, 0.2);text-align: center;border-left: white 5px solid;">
            <label style="font-size: 20px;font-weight: bold;">Homologação</label>
            <div class='sessao-status-homo mb-2' style="margin-left: 40%;">
              <label style="font-size: 20px;font-weight: bold;">{{qtdHomologado}}</label>
            </div>
          </td>
        </tr>
      </table>
    </div>

    <div class='quadro-scroll' style="margin-left: 5px;height: 72%;">
      <table style="width: 100%">
        <tr class='contorno-titulo' style='border-bottom: rgba(40,55,89,0.1) solid 1px;'>
          <th>Status</th>
          <th>Cliente</th>
          <th>Data Instalação</th>
          <th>Previsão Entrega</th>
          <th>Data Final</th>
          <th>Markup</th>
          <th>R$/kWp</th>
          <th>Registros: {{totLista}}</th>
        </tr>
        {{#each dataord}}
        <tr>
          <td>
            {{#if atrasado}}
            <div id='atrasado'><i class='bi bi-exclamation-triangle' style="font-size: 12px;"></i>
            </div>
            {{else}}
            {{#if executando}}
            <div id='execucao'></div>
            {{else}}
            {{#if parado}}
            <div id='parado'></div>
            {{else}}
            {{#if homologado}}
            <div id='homologado'></div>
            {{else}}
            <div id='aguardando'></div>
            {{/if}}
            {{/if}}
            {{/if}}
            {{/if}}
          </td>
          <td>{{nomecliente}}</td>
          <td>{{dataIns}}</td>
          <td>{{dataprev}}</td>
          <td>{{datafim}}</td>
