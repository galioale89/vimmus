<div class="container card mt-2">
    <div class="row">
        <h4 class="shadow p-3 mb-2 bg-body rounded" style="color:white;background: linear-gradient(200deg, rgb(73, 91, 182), rgb(43, 57, 128), rgb(16, 32, 110));">Projeto: {{projeto.nome}}</h4>
    </div>

    <div class="btn-group">
        <a href="/customdo/instalacao/{{projeto._id}}" class="btn btn-primary active"><i class="bi bi-tools"></i> Instalação</a>
        <a href="/customdo/projetista/{{projeto._id}}" class="btn btn-primary"><i class="bi bi-pencil"></i> Projetista</a>
        <a href="/customdo/gestao/{{projeto._id}}" class="btn btn-primary"><i class="bi bi-puzzle"></i> Gestão</a>
        <a href="/gerenciamento/{{projeto._id}}" class="btn btn-primary"><i class="bi bi-cursor"></i>Gerenciamento</a>
        <a href="/gerenciamento/tributos/{{projeto._id}}" class="btn btn-primary"><i class="bi bi-calculator"></i>Tributos</a>
    </div>

    <form action='/customdo/instalacao' method='post'>

        <input type="hidden" name="id" value='{{projeto._id}}'>

        <div class='row'>
            <div class="row mt-3">
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="vlrhri" class="fw-bold col-form-label col-form-label-sm">R$/Hora:
                            </label>
                        </div>
                        <div class="col-md-5">
                            <input type="number" name="vlrhri" id='vlrhri' value='{{projeto.vlrhri}}'
                                class='form-control form-control-sm'>
                        </div>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="row">
                        <div class="col-md-2">
                            <label class='col-form-label col-form-label-sm fw-bold'>Instalador:</label>
                        </div>
                        {{#if projeto.funins}}
                        <div class="col-md-10">
                            <input type='hidden' nome='pinome' value='{{pi.nome}}'>
                            <label class='col-form-label col-form-label-sm'>{{pi.nome}}</label>
                        </div>
                        {{else}}
                        <div class="col-md-8">
                            <select class='form-select form-select-sm' name='funins'>
                                {{#each instalador}}
                                <option value='{{_id}}'>{{nome}}</option>
                                {{else}}
                                <option>Nenhum instalador cadastrado</option>
                                {{/each}}
                            </select>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="col-md-8 mb-2">
                <div class="card mt-2">
                    <div class="card-body">
                        <label for="estrutura"
                            class="fw-bold col-sm-6 col-form-label col-form-label-sm">Estrutura</label>
                        <div class="row g-3">
                            <div class="col">
                                <label for="unidade" class="col-sm-10 col-form-label col-form-label-sm">Unidade</label>
                                <div class="input-group input-group-sm mb-1">
                                    <input type="number" name="uniest" id='uniest' value='{{projeto.uniest}}'
                                        class='form-control'>
                                </div>
                            </div>
                            <div class="col">
                                <label for="trabalho" class="col-sm-10 col-form-label col-form-label-sm">Horas
                                    Trabalho</label>
                                <div class="input-group input-group-sm mb-1">
                                    <input disabled type="number" name='trbest' id="trbest" value='{{projeto.trbest}}'
                                        class="form-control">
                                </div>
                            </div>
                            <div class="col">
                                <label for="total" class="col-sm-10 col-form-label col-form-label-sm">Total:</label>
                                <div class="input-group input-group-sm mb-1">
                                    <span class="input-group-text">$</span>
                                    <input disabled type="number" class="form-control" name='totest' id="totest"
                                        value='{{projeto.totest}}' aria-label='R$'>
                                    <span class="input-group-text">.00</span>
                                </div>
                            </div>
                        </div>

                        <label for="modulos" class="fw-bold col-sm-10 col-form-label col-form-label-sm">Módulos e
                            Conexões
                        </label>
                        <div class="row g-3">
                            <div class="col">
                                <label for="unidade" class="col-sm-10 col-form-label col-form-label-sm">Unidade</label>
                                <div class="input-group input-group-sm mb-1">
                                    <input type="number" name='unimod' id="unimod" value='{{projeto.unimod}}'
                                        class='form-control'>
                                </div>
                            </div>
                            <div class="col">
                                <label for="horas" class="col-sm-10 col-form-label col-form-label-sm">Horas
                                    Trabalho</label>
                                <div class="input-group input-group-sm mb-1">
                                    <input disabled type="number" name='trbmod' id="trbmod" value='{{projeto.trbmod}}'
                                        class="form-control">
                                </div>
                            </div>
                            <div class="col">
                                <label for="total" class="col-sm-10 col-form-label col-form-label-sm">Total
                                </label>
                                <div class="input-group input-group-sm mb-1">
                                    <span class="input-group-text">$</span>
                                    <input disabled type="number" class="form-control" name='totmod' id="totmod"
                                        value='{{projeto.totmod}}' aria-label="R$ ">
                                    <span class="input-group-text">.00</span>
                                </div>
                            </div>
                        </div>

                        <label for="inversor" class="fw-bold col-sm-10 col-form-label col-form-label-sm">Inversor <br>
                            (Instalação e Configuração)
                        </label>
                        <div class="row g-3">
                            <div class="col">
                                <label for="unidade" class="col-sm-6 col-form-label col-form-label-sm">Unidade</label>
                                <div class="input-group input-group-sm mb-1">
                                    <input type="number" name='uniinv' id="uniinv" value='{{projeto.uniinv}}'
                                        class="form-control">
                                </div>
                            </div>
                            <div class="col">
                                <label for="trabalho" class="col-sm-10 col-form-label col-form-label-sm">Horas
                                    Trabalho</label>
                                <div class="input-group input-group-sm mb-1">
                                    <input disabled type="number" name='trbinv' id="trbinv" value='{{projeto.trbinv}}'
                                        class="form-control">
                                </div>
                            </div>
                            <div class="col">
                                <label for="total" class="col-sm-6 col-form-label col-form-label-sm">Total</label>
                                <div class="input-group input-group-sm mb-1">
                                    <span class="input-group-text">$</span>
                                    <input disabled type="text" class="form-control" name='totinv' id="totinv"
                                        value='{{projeto.totinv}}' aria-label="R$ " disable>
                                    <span class="input-group-text">.00</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col md-4">
                <div class="text-center mt-5">
                    <div class="card-body">
                        <h4> Total </h4>
                        <br>
                        <label class="format-label text-center">Valor Total de Instalação: R$
                            {{projeto.totint}}</label>
                        <br>
                        <label class="format-label text-center">Horas totais da Instalação: {{projeto.trbint}}</label>
                        <br>
                        <button type="submit" class="btn btn-sm btn-success mt-4" name="aplicar"> <i class="bi bi-check-circle"></i> Aplicar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>