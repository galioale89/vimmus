<style>
    .botao-menu {
        background-color: rgb(40, 55, 86);
        border: white 1px solid;
        border-radius: 5px;
        color: white;
    }

    .botao-menu:hover {
        background-color: rgb(40, 55, 86);
        border: white 1px solid;
        border-radius: 5px;
        font-weight: 600;
        color: white;
    }

    .ativo {
        background-color: rgb(10, 30, 68);
    }

    .caixa {
        border: rgba(200, 200, 200, 0.8) 1px solid;
        width: fit-content;
        height: 293px;
        border-radius: 5px;
        padding-left: 10px;
        padding-right: 20px;
    }
</style>

<div style="width: 98%;padding-left: 2%;padding-top: 0.5%;">
        <div style="width: 100%;">
            <h5 class="header">{{cliente.nome}} </h5>
        </div>

    <form action='/customdo/instalacao' method='post'>

        <input type="hidden" name="id" value='{{projeto._id}}'>

        <div class="btn-group  col-12 mx-auto'">
            <a href="/customdo/projetista/{{projeto._id}}" class="btn btn-sm botao-menu"><i class="bi bi-pencil"></i>
                Projetista</a>
            <a href="/customdo/gestao/{{projeto._id}}" class="btn btn-sm botao-menu"><i class="bi bi-gear"></i>
                Gestão</a>
            <a href="/customdo/instalacao/{{projeto._id}}" class="btn btn-sm botao-menu ativo"><i
                    class="bi bi-tools"></i>
                Instalação</a>                
            <a href="/gerenciamento/{{projeto._id}}" class="btn btn-sm botao-menu"><i class="bi bi-puzzle"></i>
                Gerenciamento</a>
            <a href="/gerenciamento/tributos/{{projeto._id}}" class="btn btn-sm botao-menu"><i
                    class="bi bi-calculator"></i> Tributos</a>
        </div>
        <div class='row'>
                            <div class="row mb-2 mt-1">
                                <div class='col-sm-2'>
                                    <a href='/pessoa/formaequipe/{{projeto._id}}' class='btn btn-sm btn-primary'> <i
                                            class="bi bi-people"></i> Equipe de Instalação </a>
                                </div>
                                <div class='col-md-2' style="border:rgb(68, 96, 238) 1px solid;border-radius: 5px;">
                                    <label class="fw-bold col-form-label col-form-label-sm">{{#if projeto.qtdequipe}}{{projeto.qtdequipe}}{{else}}0{{/if}}
                                        pessoas na equipe</label>
                                </div>
                            </div>             
            <div class="col-md-8">
                <div class="row mt-2">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-3">
                                <label for="vlrhri" class="fw-bold col-form-label col-form-label-sm">R$/Hora:
                                </label>
                            </div>
                            <div class="col-md-5">
                                <input type="text" name="vlrhri"
                                    id='vlrhri' {{#if projeto.vlrhri}}value='{{projeto.vlrhri}}'{{else}}value='{{configuracao.vlrhri}}'{{/if}} class='form-control form-control-sm'>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-4">
                                <label class='col-form-label col-form-label-sm fw-bold'>Instalador Responsável:</label>
                            </div>
                            {{#if projeto.funins}}
                            <div class="col-md-8">
                                <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type='hidden' nome='pinome'
                                    value='{{pi.nome}}'>
                                <label class='col-form-label col-form-label-sm'>{{pi.nome}}</label>
                            </div>
                            {{else}}
                            <div class="col-md-8" style="">
                                <select class='form-select form-select-sm' name='funins'>
                                    {{#each instalador}}
                                    <option value='{{_id}}'>{{nome}}</option>
                                    {{else}}
                                    <option>Nenhum instalador cadastrado</option>
                                    {{/each}}
                                </select>
                            </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="card" style="padding: 7px;">
                        <div class="row">                         
                            <div class="col-md-3 text-end">
                                <label for="aterramento" class="col-form-label col-form-label-sm">Atividades</label><br>
                                <label for="aterramento"
                                    class="fw-bold col-form-label col-form-label-sm mb-4">Aterramento</label>
                            </div>
                            <div class="col">
                                <label for="unidade" class="col-sm-10 col-form-label col-form-label-sm">Unidade</label>
                                <div class="input-group input-group-sm mb-1">
                                    <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="number" name="uniatr"
                                        id='uniatr' value='{{projeto.uniatr}}' class='form-control'>
                                </div>
                            </div>
                            <div class="col">
                                <label for="trabalho" class="col-sm-10 col-form-label col-form-label-sm">Horas
                                    Trabalho</label>
                                <div class="input-group input-group-sm mb-1">
                                    <input disabled type="number" name='trbatr' id="trbatr" value='{{projeto.trbatr}}'
                                        class="form-control">
                                </div>
                            </div>
                            <div class="col">
                                <label for="total" class="col-sm-10 col-form-label col-form-label-sm">Total</label>
                                <div class="input-group input-group-sm mb-1">
                                    <span class="input-group-text">$</span>
                                    <input disabled type="number" class="form-control" name='totatr' id="totatr"
                                        value='{{projeto.totatr}}' aria-label='R$'>
                                    <span class="input-group-text">.00</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 text-end">
                                <label for="estrutura"
                                    class="fw-bold col-form-label col-form-label-sm mb-4">Estrutura</label>
                            </div>
                            <div class="col">
                                <div class="input-group input-group-sm mb-1">
                                    <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="number" name="uniest"
                                        id='uniest' value='{{projeto.uniest}}' class='form-control'>
                                </div>
                            </div>
                            <div class="col">
                                <div class="input-group input-group-sm mb-1">
                                    <input disabled type="number" name='trbest' id="trbest" value='{{projeto.trbest}}'
                                        class="form-control">
                                </div>
                            </div>
                            <div class="col">

                                <div class="input-group input-group-sm mb-1">
                                    <span class="input-group-text">$</span>
                                    <input disabled type="number" class="form-control" name='totest' id="totest"
                                        value='{{projeto.totest}}' aria-label='R$'>
                                    <span class="input-group-text">.00</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 text-end">
                                <label for="estrutura" class="fw-bold col-form-label col-form-label-sm mb-4">Módulos e
                                    Conexões</label>
                            </div>
                            <div class="col">
                                <div class="input-group input-group-sm mb-1">
                                    <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="number" name='unimod'
                                        id="unimod" value='{{projeto.unimod}}' class='form-control'>
                                </div>
                            </div>
                            <div class="col">
                                <div class="input-group input-group-sm mb-1">
                                    <input disabled type="number" name='trbmod' id="trbmod" value='{{projeto.trbmod}}'
                                        class="form-control">
                                </div>
                            </div>
                            <div class="col">
                                <div class="input-group input-group-sm mb-1">
                                    <span class="input-group-text">$</span>
                                    <input disabled type="number" class="form-control" name='totmod' id="totmod"
                                        value='{{projeto.totmod}}' aria-label="R$ ">
                                    <span class="input-group-text">.00</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 text-end">

                                <label for="estrutura" class="fw-bold col-form-label col-form-label-sm">Inversor <br>
                                    (Instalação e
                                    Configuração)</label>
                            </div>
                            <div class="col">

                                <div class="input-group input-group-sm mb-1">
                                    <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="number" name='uniinv'
                                        id="uniinv" value='{{projeto.uniinv}}' class="form-control">
                                </div>
                            </div>
                            <div class="col">

                                <div class="input-group input-group-sm mb-1">
                                    <input disabled type="number" name='trbinv' id="trbinv" value='{{projeto.trbinv}}'
                                        class="form-control">
                                </div>
                            </div>
                            <div class="col">

                                <div class="input-group input-group-sm mb-1">
                                    <span class="input-group-text">$</span>
                                    <input disabled type="text" class="form-control" name='totinv' id="totinv"
                                        value='{{projeto.totinv}}' aria-label="R$ " disable>
                                    <span class="input-group-text">.00</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col md-4">
                <div class="row mt-2">
                    <button type="submit" style="margin-left: 10px;width: 90%;" class="btn btn-sm btn-success"
                        name="aplicar" {{#if projeto.orcado}}{{else}}disabled{{/if}}> <i class="bi bi-check-circle"></i>
                        Aplicar</button>
                </div>
                <div class="caixa text-center mt-2">
                    <h4 style="margin-top: 10px;"> Totais </h4>
                    <hr>
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Custo</h5>
                            <div class="quadro-caixa">R$ {{projeto.totint}}</div>
                        </div>
                        <div class="col-md-6">
                            <h5>Horas de Trabalho</h5>
                            <div class="quadro-caixa">{{projeto.trbint}}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>