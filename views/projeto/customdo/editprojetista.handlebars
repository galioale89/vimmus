<div class='container card mt-2'>
    <div class="row">
        <h4 class="shadow p-3 mb-2 bg-body rounded" style="color:white;background: linear-gradient(200deg, rgb(73, 91, 182), rgb(43, 57, 128), rgb(16, 32, 110));">Projeto: {{projeto.nome}} </h4>
    </div>  
    <form action='/customdo/editar/projetista' method="post">

        <input type='hidden' name='id' value='{{projeto._id}}'>

        <div class="row">
            <div class='btn-group col-12 mx-auto'>
                <a href='/projeto/edicao/{{projeto._id}}/' class='btn btn-primary mb-1'> <i class="bi bi-house"></i> Principal</a>
                <a href='/customdo/editar/instalacao/{{projeto._id}}/' class='btn btn-primary mb-1'> <i class="bi bi-tools"></i> Instalação</a>
                <a href='/customdo/editar/projetista/{{projeto._id}}/' class='btn btn-primary mb-1 active'> <i class="bi bi-pencil"></i> Projetista</a>
                <a href='/customdo/editar/gestao/{{projeto._id}}/' class='btn btn-primary mb-1'> <i class="bi bi-puzzle"></i> Gestão</a>
                <a href='/gerenciamento/editar/gerenciamento/{{projeto._id}}/'
                    class='btn btn-primary mb-1'><i class="bi bi-cursor"></i> Gerenciamento </a>
                <a href='/gerenciamento/editar/tributos/{{projeto._id}}/' class='btn btn-primary mb-1'> <i class="bi bi-calculator"></i> Tributos </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="row">
                    <div class="col-md-3">
                        <div class="row mt-2">
                            <div class="col-md-3">
                                <label for="vlrhrp" class="fw-bold col-form-label col-form-label-sm">R$/Hora:
                                </label>
                            </div>
                            <div class="col-md-7">
                                <input type="number" name="vlrhrp" id='vlrhrp' value='{{projeto.vlrhrp}}'
                                    class='form-control form-control-sm'>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8 card">
                        <div class="row">
                            <div class="col-md-2">
                                <label class='mt-2 col-form-label col-form-label-sm fw-bold'>Projetista:</label>
                            </div>
                            <div class="col-md-3">
                                <input type='hidden' name='ppnome' value='{{pp.nome}}'>
                                <label class='mt-2 col-form-label col-form-label-sm'>{{pp.nome}}</label>
                            </div>
                            <div class="col-md-7">
                                <div class="row mt-2 mb-2">
                                    <div class="col-md-3"
                                        style="border: solid 1px; border-width: 1px ;border-color: gray;border-right:brown;border-top:brown;border-bottom:brown;">
                                        <div class="row">
                                            <div class="col-md-7">
                                                <label class='col-form-label col-form-label-sm fw-bold'>Alterar:</label>
                                            </div>
                                            <div class="col-md-2">
                                                <div class='form-check'>
                                                    <input class='mt-2 form-check-input' type='checkbox'
                                                        name='checkPro'>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <select class='form-select form-select-sm' name='funpro'>
                                            {{#each projetista}}
                                            <option value='{{_id}}'>{{nome}}</option>
                                            {{else}}
                                            <option>Nenhum projetista cadastrado</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="row mt-2 mb-2">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <label for="memorial"
                                        class="fw-bold col-sm-10 col-form-label col-form-label-sm">Memorial
                                        Descritivo
                                    </label>
                                    <div class="row g-3">
                                        <div class="col">
                                            <label for="trabalho"
                                                class="col-sm-10 col-form-label col-form-label-sm">Horas
                                                Trabalho</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <input type="text" id="trbmem" name="trbmem" value='{{projeto.trbmem}}'
                                                    class="form-control">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="total"
                                                class="col-sm-6 col-form-label col-form-label-sm">Total</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <span class="input-group-text">$</span>
                                                <input disabled type="text" class="form-control" id="totmem"
                                                    name="totmem" value='{{projeto.totmem}}' aria-label="R$ ">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>

                                    <label for="art" class="fw-bold col-sm-10 col-form-label col-form-label-sm">Art
                                    </label>
                                    <div class="row g-3">
                                        <div class="col">
                                            <label for="trabalho"
                                                class="col-sm-10 col-form-label col-form-label-sm">Horas
                                                Trabalho</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <input type="text" id="trbart" name="trbart" value='{{projeto.trbart}}'
                                                    class="form-control">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="total"
                                                class="col-sm-6 col-form-label col-form-label-sm">Total</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <span class="input-group-text">$</span>
                                                <input disabled type="text" class="form-control" id="totart"
                                                    name="totart" value='{{projeto.totart}}' aria-label="R$ ">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>

                                    <label for="aterramento"
                                        class="fw-bold col-sm-10 col-form-label col-form-label-sm">Diagrama de
                                        Aterramento
                                    </label>
                                    <div class="row g-3">
                                        <div class="col">
                                            <label for="trabalho"
                                                class="col-sm-10 col-form-label col-form-label-sm">Horas
                                                Trabalho</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <input type="text" id="trbate" name="trbate" value='{{projeto.trbate}}'
                                                    class="form-control">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="total"
                                                class="col-sm-6 col-form-label col-form-label-sm">Total</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <span class="input-group-text">$</span>
                                                <input disabled type="text" class="form-control" id="totate"
                                                    name="totate" value='{{projeto.totate}}' aria-label="R$ ">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <label for="distribuição"
                                        class="fw-bold col-sm-10 col-form-label col-form-label-sm">Diagrama de
                                        Distribuição dos Módulos </label>
                                    <div class="row g-3">
                                        <div class="col">
                                            <label for="trabalho"
                                                class="col-sm-10 col-form-label col-form-label-sm">Horas
                                                Trabalho</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <input type="text" id="trbdis" name="trbdis" value='{{projeto.trbdis}}'
                                                    class="form-control">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="total"
                                                class="col-sm-6 col-form-label col-form-label-sm">Total</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <span class="input-group-text">$</span>
                                                <input disabled type="text" class="form-control" id="totdis"
                                                    name="totdis" value='{{projeto.totdis}}' aria-label="R$ ">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>

                                    <label for="unifilar"
                                        class="fw-bold col-sm-10 col-form-label col-form-label-sm">Diagrama
                                        Unifilar
                                    </label>
                                    <div class="row g-3">
                                        <div class="col">
                                            <label for="trabalho"
                                                class="col-sm-10 col-form-label col-form-label-sm">Horas
                                                Trabalho</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <input type="text" id="trbuni" name="trbuni" value='{{projeto.trbuni}}'
                                                    class="form-control">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="total"
                                                class="col-sm-6 col-form-label col-form-label-sm">Total</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <span class="input-group-text">$</span>
                                                <input disabled type="text" class="form-control" id="totuni"
                                                    name="totuni" value='{{projeto.totuni}}' aria-label="R$ ">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>

                                    <label for="situacao"
                                        class="fw-bold col-sm-10 col-form-label col-form-label-sm">Diagrama de
                                        Situação
                                    </label>
                                    <div class="row g-3">
                                        <div class="col">
                                            <label for="trabalho"
                                                class="col-sm-10 col-form-label col-form-label-sm">Horas
                                                Trabalho</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <input type="text" id="trbsit" name="trbsit" value='{{projeto.trbsit}}'
                                                    class="form-control">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="total"
                                                class="col-sm-6 col-form-label col-form-label-sm">Total</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <span class="input-group-text">$</span>
                                                <input disabled type="text" class="form-control" id="totsit"
                                                    name="totsit" value='{{projeto.totsit}}' aria-label="R$ ">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center mt-5">

                        <h4> Total </h4>
                        <br>
                        <label class="format-label text-center">Valor Total: R$
                            {{projeto.totpro}}</label>
                        <br>
                        <label class="format-label text-center">Horas Totais:
                            {{projeto.trbpro}} horas</label>
                        <br>

                    </div>
                    <div class="row mt-4">
                        <div class="col-md-6 d-grid gap-2 col-12">
                            <a href='/gerenciamento/dashboard/{{projeto._id}}' class='btn btn-sm btn-primary'><i class="bi bi-bar-chart"></i> Dashboard</a>
                        </div>
                        <div class="col-md-6 d-grid gap-2 col-12">
                            <button type="submit" class="btn btn-sm btn-success" name="aplicar"> <i class="bi bi-check-circle"></i> Aplicar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>