<style>
    .botao-menu {
        background-color: rgb(40, 55, 86);
        border: white 1px solid;
        border-radius: 5px;
        color: white;
    }

    .botao-menu:hover {
        background-color: rgb(40, 55, 86);
        border: white 1px solid;
        border-radius: 5px;
        font-weight: 600;
        color: white;
    }

    .ativo {
        background-color: rgb(10, 30, 68);
    }

    .caixa {
        border: rgba(200, 200, 200, 0.8) 1px solid;
        width: fit-content;
        height: 285px;
        border-radius: 5px;
        padding-left: 10px;
        padding-right: 20px;
        box-shadow: 1px 4px 5px rgba(26, 25, 25, 0.77);
    }
</style>
<div style="width: 98%;padding-left: 2%;padding-top: 0.5%;">
    <div style="width: 100%;">
        <h5 class="header">{{cliente.nome}} </h5>
    </div>
    <form action='/customdo/editar/projetista' method="post">

        <input type='hidden' name='id' value='{{projeto._id}}'>

        <div class='btn-group col-12 mx-auto'>
            <a href='/projeto/edicao/{{projeto._id}}/' class='btn btn-sm botao-menu'> <i
                    class="bi bi-house"></i>Projeto</a>
            <a href="/customdo/editar/gestao/{{projeto._id}}" class="btn btn-sm botao-menu"><i class="bi bi-gear"></i>
                Gestão</a>
            <a href="/customdo/editar/projetista/{{projeto._id}}" class="btn btn-sm botao-menu ativo"><i
                    class="bi bi-pencil"></i>
                Projetista</a>
            <a href="/customdo/editar/instalacao/{{projeto._id}}" class="btn btn-sm botao-menu"><i
                    class="bi bi-tools"></i>
                Instalação</a>
            <a href="/gerenciamento/editar/gerenciamento/{{projeto._id}}" class="btn btn-sm botao-menu"><i
                    class="bi bi-puzzle"></i>
                Gerenciamento</a>
            <a href="/gerenciamento/editar/tributos/{{projeto._id}}" class="btn btn-sm botao-menu"><i
                    class="bi bi-calculator"></i> Tributos</a>
        </div>

        <div class="row mt-1">
            <div class="row">
                <div class="col-md-2">
                    <div class="row mt-2">
                        <div class="col-md-4">
                            <label for="vlrhrp" class="fw-bold col-form-label col-form-label-sm">R$/Hora:
                            </label>
                        </div>
                        <div class="col-md-7">
                            <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="text" name="vlrhrp" id='vlrhrp'
                                value='{{projeto.vlrhrp}}' class='form-control form-control-sm'>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mt-2">
                    <div class="row">
                        <div class="col-md-4">
                            <label class="fw-bold col-form-label col-form-label-sm">Valor ART: </label>
                        </div>
                        <div class="col-md-8">
                            <div class="input-group input-group-sm mb-1">
                                <span class="input-group-text">$</span>
                                <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="text" class="form-control"
                                    id="vlrart" name="vlrart" value='{{projeto.vlrart}}' aria-label="R$ ">
                                <span class="input-group-text">.00</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="margin-left: 6%;" class="col-md-6 card">
                    <div class="row">
                        <div class="col-md-2">
                            <label class='mt-2 col-form-label col-form-label-sm fw-bold'>Projetista:</label>
                        </div>
                        <div class="col-md-3">
                            <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type='hidden' name='ppnome'
                                value='{{pp.nome}}'>
                            <label class='mt-2 col-form-label col-form-label-sm'>{{pp.nome}}</label>
                        </div>
                        <div class="col-md-7">
                            <div class="row mt-2 mb-2">
                                <div class="col-md-3"
                                    style="border: solid 1px; border-width: 1px ;border-color: gray;border-right:brown;border-top:brown;border-bottom:brown;">
                                    <div class="row">
                                        <div class="col-md-7">
                                            <label class='col-form-label col-form-label-sm fw-bold'>Alterar:</label>
                                        </div>
                                        <div class="col-md-2">
                                            <div class='form-check'>
                                                <input {{#if projeto.orcado}}{{else}}disabled{{/if}}
                                                    class='mt-2 form-check-input' type='checkbox' name='checkPro'>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <select {{#if projeto.orcado}}{{else}}disabled{{/if}}
                                        class='form-select form-select-sm' name='funpro'>
                                        {{#each projetista}}
                                        <option value='{{_id}}'>{{nome}}</option>
                                        {{else}}
                                        <option>Nenhum projetista cadastrado</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="row mt-2 mb-2">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <label for="memorial"
                                        class="fw-bold col-sm-10 col-form-label col-form-label-sm">Memorial
                                        Descritivo
                                    </label>
                                    <div class="row">
                                        <div class="col">
                                            <label for="trabalho"
                                                class="col-sm-10 col-form-label col-form-label-sm">Horas
                                                Trabalho</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="text"
                                                    id="trbmem" name="trbmem" value='{{projeto.trbmem}}'
                                                    class="form-control">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="total"
                                                class="col-sm-6 col-form-label col-form-label-sm">Total</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <span class="input-group-text">$</span>
                                                <input disabled type="text" class="form-control" id="totmem"
                                                    name="totmem" value='{{projeto.totmem}}' aria-label="R$ ">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>

                                    <label for="art" class="fw-bold col-sm-10 col-form-label col-form-label-sm">Art
                                    </label>
                                    <div class="row">
                                        <div class="col">
                                            <label for="trabalho"
                                                class="col-sm-10 col-form-label col-form-label-sm">Horas
                                                Trabalho</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="text"
                                                    id="trbart" name="trbart" value='{{projeto.trbart}}'
                                                    class="form-control">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="total"
                                                class="col-sm-6 col-form-label col-form-label-sm">Total</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <span class="input-group-text">$</span>
                                                <input disabled type="text" class="form-control" id="totart"
                                                    name="totart" value='{{projeto.totart}}' aria-label="R$ ">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>

                                    <label for="aterramento"
                                        class="fw-bold col-sm-10 col-form-label col-form-label-sm">Diagrama de
                                        Aterramento
                                    </label>
                                    <div class="row">
                                        <div class="col">
                                            <label for="trabalho"
                                                class="col-sm-10 col-form-label col-form-label-sm">Horas
                                                Trabalho</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="text"
                                                    id="trbate" name="trbate" value='{{projeto.trbate}}'
                                                    class="form-control">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="total"
                                                class="col-sm-6 col-form-label col-form-label-sm">Total</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <span class="input-group-text">$</span>
                                                <input disabled type="text" class="form-control" id="totate"
                                                    name="totate" value='{{projeto.totate}}' aria-label="R$ ">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <label for="distribuição"
                                        class="fw-bold col-sm-10 col-form-label col-form-label-sm">Diagrama de
                                        Distribuição dos Módulos </label>
                                    <div class="row">
                                        <div class="col">
                                            <label for="trabalho"
                                                class="col-sm-10 col-form-label col-form-label-sm">Horas
                                                Trabalho</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="text"
                                                    id="trbdis" name="trbdis" value='{{projeto.trbdis}}'
                                                    class="form-control">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="total"
                                                class="col-sm-6 col-form-label col-form-label-sm">Total</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <span class="input-group-text">$</span>
                                                <input disabled type="text" class="form-control" id="totdis"
                                                    name="totdis" value='{{projeto.totdis}}' aria-label="R$ ">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>

                                    <label for="unifilar"
                                        class="fw-bold col-sm-10 col-form-label col-form-label-sm">Diagrama
                                        Unifilar
                                    </label>
                                    <div class="row">
                                        <div class="col">
                                            <label for="trabalho"
                                                class="col-sm-10 col-form-label col-form-label-sm">Horas
                                                Trabalho</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="text"
                                                    id="trbuni" name="trbuni" value='{{projeto.trbuni}}'
                                                    class="form-control">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="total"
                                                class="col-sm-6 col-form-label col-form-label-sm">Total</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <span class="input-group-text">$</span>
                                                <input disabled type="text" class="form-control" id="totuni"
                                                    name="totuni" value='{{projeto.totuni}}' aria-label="R$ ">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>

                                    <label for="situacao"
                                        class="fw-bold col-sm-10 col-form-label col-form-label-sm">Diagrama de
                                        Situação </label>
                                    <div class="row">
                                        <div class="col">
                                            <label for="trabalho"
                                                class="col-sm-10 col-form-label col-form-label-sm">Horas
                                                Trabalho</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="text"
                                                    id="trbsit" name="trbsit" value='{{projeto.trbsit}}'
                                                    class="form-control">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <label for="total"
                                                class="col-sm-6 col-form-label col-form-label-sm">Total</label>
                                            <div class="input-group input-group-sm mb-1">
                                                <span class="input-group-text">$</span>
                                                <input disabled type="text" class="form-control" id="totsit"
                                                    name="totsit" value='{{projeto.totsit}}' aria-label="R$ ">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col md-4 mt-2">
                    <button type="submit" class="btn btn-sm btn-success" style='width: 96%;' name="aplicar" {{#if
                        projeto.orcado}}{{else}}disabled{{/if}}> <i class="bi bi-check-circle"></i> Aplicar</button>
                    <div class="caixa text-center mt-2">
                        <h4 style="margin-top: 30px"> Totais </h4>
                        <hr>
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Custo</h5>
                                <div class="quadro-caixa">R$ {{projeto.totpro_art}}</div>
                            </div>
                            <div class="col-md-6">
                                <h5>Horas de Trabalho</h5>
                                <div class="quadro-caixa">{{projeto.trbpro}}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>