<style>
    .botao-menu {
        background-color: rgb(40, 55, 86);
        border: white 1px solid;
        border-radius: 5px;
        color: white;
    }

    .botao-menu:hover {
        background-color: rgb(40, 55, 86);
        border: white 1px solid;
        border-radius: 5px;
        font-weight: 600;
        color: white;
    }

    .ativo {
        background-color: rgb(10, 30, 68);
    }
</style>
<div style="width: 98%;padding-left: 2%;padding-top: 0.5%;">
    <div style="width: 100%;">
        <h5 class="header">{{cliente.nome}} </h5>
    </div>
    <form action='/gerenciamento/editar/gerenciamento/' method='post'>
        <input type='hidden' name='id' value='{{projeto._id}}'></input>

        <div class='btn-group col-12 mx-auto'>
            <a href='/projeto/edicao/{{projeto._id}}/' class='btn btn-sm botao-menu'> <i
                    class="bi bi-house"></i>Projeto</a>
            <a href="/customdo/editar/gestao/{{projeto._id}}" class="btn btn-sm botao-menu"><i class="bi bi-gear"></i>
                Gestão</a>
            <a href="/customdo/editar/projetista/{{projeto._id}}" class="btn btn-sm botao-menu"><i
                    class="bi bi-pencil"></i>
                Projetista</a>
            <a href="/customdo/editar/instalacao/{{projeto._id}}" class="btn btn-sm botao-menu"><i
                    class="bi bi-tools"></i>
                Instalação</a>
            <a href="/gerenciamento/editar/gerenciamento/{{projeto._id}}" class="btn btn-sm botao-menu ativo"><i
                    class="bi bi-puzzle"></i>
                Gerenciamento</a>
            <a href="/gerenciamento/editar/tributos/{{projeto._id}}" class="btn btn-sm botao-menu"><i
                    class="bi bi-calculator"></i> Tributos</a>
        </div>
        <div class="row mt-2">
            <div class="col-md-7">
                <div class="row">
                    <div class="col-md-6 card">
                        <div class="row mt-3 text-end">
                            <label class="fw-bold col-sm-5 col-form-label col-form-label-sm">Equipe: </label>
                            <div class="col-sm-6 mb-1"
                                style="border:rgba(68, 96, 238,0.5) 1px solid;border-radius: 5px;">
                                <label class="col-form-label col-form-label-sm">{{projeto.qtdequipe}}</label>
                            </div>
                            <label for="tothrs" class="fw-bold col-sm-5 col-form-label col-form-label-sm">Horas Projeto:
                            </label>
                            <div class="col-sm-6 mb-1"
                                style="border:rgba(68, 96, 238,0.5) 1px solid;border-radius: 5px;">
                                <label class="col-form-label col-form-label-sm"> {{projeto.tothrs}} </label>
                            </div>
                            <label for="diastr" class="fw-bold col-sm-5 col-form-label col-form-label-sm">Dias de Obras:
                            </label>
                            <div class="col-sm-6" style="border:rgba(68, 96, 238,0.5) 1px solid;border-radius: 5px;">
                                <label class="col-form-label col-form-label-sm"> {{projeto.diastr}} </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 card">
                        <label for="combustivel"
                            class="fw-bold col-sm-10 col-form-label col-form-label-sm">Combustível</label>

                        <div class="row text-end">
                            <label for="unidade" class="col-sm-5 col-form-label col-form-label-sm">Distância</label>
                            <div class="col-sm-5">
                                <div class="input-group input-group-sm mb-1">
                                    <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="text" name="discmb"
                                        value='{{projeto.discmb}}' class="form-control">
                                </div>
                            </div>

                            <label for="trabalho" class="col-sm-5 col-form-label col-form-label-sm">R$
                                Litro Combustível</label>
                            <div class="col-sm-5">
                                <div class="input-group input-group-sm mb-1">
                                    <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="text" name="ltocmb"
                                        value='{{projeto.ltocmb}}' class="form-control">
                                </div>
                            </div>

                            <label for="total" class="col-sm-5 col-form-label col-form-label-sm">R$ Total</label>
                            <div class="col-sm-5">
                                <div class="input-group input-group-sm mb-1">
                                    <span class="input-group-text">$</span>
                                    <input disabled type="number" class="form-control" name="totcmb"
                                        value='{{projeto.totcmb}}' aria-label="R$ ">
                                    <span class="input-group-text">.00</span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row ">
                    <div class="col-md-6 card">
                        <label for="alimentação"
                            class="fw-bold col-sm-10 col-form-label col-form-label-sm">Alimentação</label>

                        <div class="row text-end">
                            <label for="vlrali" class="col-sm-5 col-form-label col-form-label-sm">Valor por Pessoa:
                            </label>
                            <div class="col-sm-5">
                                <div class="input-group input-group-sm mb-1">
                                    <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="text" name="vlrali"
                                        value='{{projeto.vlrali}}' class="form-control">
                                </div>
                            </div>

                            <label for="total" class="col-sm-5 col-form-label col-form-label-sm">R$ Total</label>
                            <div class="col-sm-5">
                                <div class="input-group input-group-sm mb-1">
                                    <span class="input-group-text">$</span>
                                    <input disabled type="number" class="form-control" name="totali"
                                        value='{{projeto.totali}}' aria-label="R$ ">
                                    <span class="input-group-text">.00</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 card">
                        <label for="estadia" class="fw-bold col-form-label col-form-label-sm">Estadia </label>
                        <div class="row text-end">
                            <label for="trabalho" class="col-md-5 col-form-label col-form-label-sm">R$ Diária
                            </label>
                            <div class="col-md-5">
                                <div class="input-group input-group-sm mb-1">
                                    <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="number" name="vlrdia"
                                        value='{{projeto.vlrdia}}' class="form-control">
                                </div>
                            </div>

                            <label for="valor" class="col-md-5 col-form-label col-form-label-sm">Número de
                                Diárias</label>
                            <div class="col-md-5">
                                <div class="input-group input-group-sm mb-1">
                                    <input disabled type="number" name="numdia" value='{{projeto.diastr}}'
                                        class="form-control">
                                </div>
                            </div>

                            <label for="total" class="col-md-5 col-form-label col-form-label-sm">Total</label>
                            <div class="col-sm-5">
                                <div class="input-group input-group-sm mb-1">
                                    <span class="input-group-text">$</span>
                                    <input disabled type="number" class="form-control" name="tothtl"
                                        value='{{projeto.tothtl}}' aria-label="R$ ">
                                    <span class="input-group-text">.00</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="btn-group gap-2">
                        <button {{#if projeto.orcado}}{{else}}disabled{{/if}} type="submit"
                            class="btn btn-sm btn-success"><i class="bi bi-check-circle"></i> Aplicar</button>
                        {{#if projeto.totint}}
                        <a href='/gerenciamento/cronograma/{{projeto._id}}' class="btn btn-sm btn-primary"><i
                                class="bi bi-calendar-range"></i> Cronograma</a>
                        {{/if}}
                        <a href='/menu' class='btn btn-sm btn-primary'><i class="bi bi-arrow-return-left"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="row">
                    <div class="col-md-6 text-center mt-4">
                        <label class="fw-bold col-form-label col-form-label-sm" style="font-size: 15px;">Total do
                            Projeto:</label>
                        <label class='fw-bold col-form-label col-form-label-sm' style="font-size: 15px;">R$
                            {{projeto.valor}}</label>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-6 text-center">
                                <label class="fw-bold col-form-label col-form-label-sm">MarkUp(%)</label>
                            </div>
                            <div class="col-md-6 text-center">
                                <label class="fw-bold col-form-label col-form-label-sm">Faturar Material?</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 text-center">
                                <input class='form-control form-control-sm' type="text" name="markup"
                                    value='{{projeto.markup}}' {{#if projeto.orcado}}{{else}}disabled{{/if}}>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch text-center" style="margin-left: 40px;">
                                    <input name='checkFatura' class="form-check-input" type="checkbox" {{fatura}}>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-6 text-end">
                        <label class="fw-bold col-form-label col-form-label-sm">Reserva Total:</label><br>
                        <label class="fw-bold col-form-label col-form-label-sm">Reserva Gerencial:</label><br>
                        <label class="fw-bold col-form-label col-form-label-sm mt-1">Reserva Contingência: </label><br>
                        <label class="fw-bold col-form-label col-form-label-sm mt-1">Adicional: </label><br>
                        <label class="fw-bold col-form-label col-form-label-sm mt-1">Imprevisto Elétrico:</label><br>
                        <label class="fw-bold col-form-label col-form-label-sm mt-1">Seguro:</label><br>
                        <label class="fw-bold col-form-label col-form-label-sm mt-1">Cercamento:</label><br>
                        <label class="fw-bold col-form-label col-form-label-sm mt-1">Condutores Ponto de Conexão:</label><br>
                    </div>
                    <div class="col-md-6">
                        <label class='col-form-label col-form-label-sm fw-bold'>R$ {{projeto.resger}}</label>
                        <div class="input-group input-group-sm mb-1">
                            <span class="input-group-text">$</span>
                            <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="number"
                                class="form-control form-control-sm" id="resger" name="resger"
                                value='{{projeto.resger}}' aria-label="R$ ">
                            <span class="input-group-text">.00</span>
                        </div>
                        <div class="input-group input-group-sm mb-1">
                            <label class='fw-bold col-form-label col-form-label-sm'>R$
                                {{projeto.rescon}}</label>
                        </div>
                        <div class="input-group input-group-sm mb-1">
                            <span class="input-group-text">$</span>
                            <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="number"
                                class="form-control form-control-sm" id="conadd" name="conadd"
                                value='{{projeto.conadd}}' aria-label="R$ ">
                            <span class="input-group-text">.00</span>
                        </div>
                        <div class="input-group input-group-sm mb-1">
                            <span class="input-group-text">$</span>
                            <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="number"
                                class="form-control form-control-sm" id="impele" name="impele"
                                value='{{projeto.impele}}' aria-label="R$ ">
                            <span class="input-group-text">.00</span>
                        </div>
                        <div class="input-group input-group-sm mb-1">
                            <span class="input-group-text">$</span>
                            <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="number"
                                class="form-control form-control-sm" id="seguro" name="seguro"
                                value='{{projeto.seguro}}' aria-label="R$ ">
                            <span class="input-group-text">.00</span>
                        </div>
                        <div class="input-group input-group-sm mb-1">
                            <span class="input-group-text">$</span>
                            <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="number"
                                class="form-control form-control-sm" id="outcer" name="outcer"
                                value='{{projeto.outcer}}' aria-label="R$ ">
                            <span class="input-group-text">.00</span>
                        </div>
                        <div class="input-group input-group-sm mb-1">
                            <span class="input-group-text">$</span>
                            <input {{#if projeto.orcado}}{{else}}disabled{{/if}} type="number"
                                class="form-control form-control-sm" id="outpos" name="outpos"
                                value='{{projeto.outpos}}' aria-label="R$ ">
                            <span class="input-group-text">.00</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-bottom: 3%;">
            <div class="col-md-4 card" style="background-color: rgba(79, 99, 140);color: white;">
                <label for="int" class="fw-bold col-form-label col-form-label-sm">INSTALAÇÃO</label>
                <div class="row">
                    <div class="col-md-5">
                        <label for="trbint" class="col-form-label col-form-label-sm">Horas
                            Trabalhadas:</label>
                    </div>
                    <div class="col-md-4">
                        <label for="trbint" class="col-form-label col-form-label-sm">{{projeto.trbint}}</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <label for="trbint" class="fw-bold col-form-label col-form-label-sm">Custo
                            Total:</label>
                    </div>
                    <div class="col-md-6">
                        <label for="totint" class="fw-bold col-form-label col-form-label-sm">R$
                            {{projeto.totint}}</label>
                    </div>
                </div>
            </div>

            <div class="col-md-4 card" style="background-color: rgba(79, 99, 140);color: white;">
                <label for="pro" class="fw-bold col-sm-5 col-form-label col-form-label-sm">PROJETISTA</label>
                <div class="row">
                    <div class="col-md-5">
                        <label for="trbpro" class="col-form-label col-form-label-sm">Horas Trabalhadas:</label>
                    </div>
                    <div class="col-md-6">
                        <label for="trbpro" class="col-form-label col-form-label-sm">{{projeto.trbpro}}
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <label for="totpro" class="fw-bold col-form-label col-form-label-sm">Custo Total:</label>
                    </div>
                    <div class="col-md-6">
                        <label for="totpro" class="fw-bold col-form-label col-form-label-sm">R$
                            {{projeto.totpro}}</label>
                    </div>
                </div>
            </div>
            <div class="col-md-4 card" style="background-color: rgba(79, 99, 140);color: white;">
                <label for="ges" class="fw-bold col-sm-5 col-form-label col-form-label-sm">GESTÃO</label>
                <div class="row">
                    <div class="col-md-5">
                        <label for="trbges" class="col-form-label col-form-label-sm">Horas Trabalhadas:</label>
                    </div>
                    <div class="col-md-6">
                        <label for="trbges" class="col-form-label col-form-label-sm">{{projeto.trbges}}</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <label for="totges" class="fw-bold col-form-label col-form-label-sm">Custo Total:</label>
                    </div>
                    <div class="col-md-6">
                        <label for="totges" class="fw-bold col-form-label col-form-label-sm">R$
                            {{projeto.totges}}</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>