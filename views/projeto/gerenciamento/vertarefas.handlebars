<style>
    table {
        text-align: center;
        font-size: 14px;
    }
</style>
<div class="container" style='margin-top: 30px;'>
    {{!-- <form method="post" action='/gerenciamento/addtarefa' style="text-align: center;"> --}}
        <label style="font-size: 18px;font-weight: 600;">Lista de Atividades de Manutenção</label><br><br>
        <div style="background-color: #847AF4;padding: 50px;">
            <table>
                <tr>
                    <th style="width: 20%;">Cliente</th>
                    <th style="width: 15%;">Manutenção</th>
                    <th style="width: 15%;">Preço</th>
                    <th style="width: 15%;">Data de Início</th>
                    <th style="width: 15%;">Data Final</th>
                    <th style="width: 40%;">Equipe</th>
                </tr>
                <tr>
                    <td>
                        <label class="col-form-label col-form-label-sm">{{cliente.nome}}</label>
                    </td>
                    <td>
                        <label class="col-form-label col-form-label-sm">{{tarefa.servico}}</label>
                    </td>
                    <td>
                        <label class="col-form-label col-form-label-sm">R$ {{tarefa.preco}}</label>
                    </td>
                    <td>
                        <label class="col-form-label col-form-label-sm">{{dataini}}</label>
                    </td>
                    <td>
                        <label class="col-form-label col-form-label-sm">{{datafim}}</label>
                    </td>
                    <td>
                        <label class="col-form-label col-form-label-sm">{{equipe}}</label>
                    </td>
                </tr>
            </table>
        </div>
        <div class="text-center">
            <table style="margin-top: 20px;">
                <tr>
                    <th style="color: white;width: 15%;">.</th>
                    <th style="width: 20%;">Manutenção</th>
                    <th style="width: 20%;">Data Inicial</th>
                    <th style="width: 20%;">Data Final</th>
                    <th style="width: 20%;">Preço</th>
                </tr>
                {{#each todasTarefas}}
                <tr>
                    <td><a href='/gerenciamento/tarefas/{{_id}}' <i class='bi bi-eye'></i></a></td>
                    <td>
                        <label class="col-form-label col-form-label-sm">{{servico}}</label>
                    </td>
                    <td>
                        <label class="col-form-label col-form-label-sm">{{dataini}}</label>
                    </td>
                    <td>
                        <label class="col-form-label col-form-label-sm">{{datafim}}</label>
                    </td>      
                    <td>
                        <label class="col-form-label col-form-label-sm">R$ {{preco}}</label>
                    </td>                                                      
                </tr>
                {{/each}}
            </table>
        </div>
</div>