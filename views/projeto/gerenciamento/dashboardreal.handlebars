<div class="row mt-1" style="width: 95%;margin-left: 30px;">
    <div class="col-md-2">
        <div class="row text-center" style="padding:5px; border-radius: 5px;">
            <h5 class='fw-bold mt-2'>Lucro Líquido</h5>
            <div class="card text-white text-center"
                style="border-radius: 80px; background-color: {{#if realizado.varLucRlz}}rgb(71, 114, 207) {{else}}rgb(255, 70, 70){{/if}};">
                <h4 class='text-center mt-4'>R$ {{realizado.lucroLiquido}}</h4>
                <label class='col-form-label col-form-label-sm'>Orçado: R$
                    {{projeto.lucroLiquido}}</label>
            </div>
            <a href='/gerenciamento/dashboardreal/{{realizado._id}}' style='text-decoration: none;'>
                <div class="row text-center mb-2 mt-2">
                    <div class="card text-white"
                        style="border-radius: 80px;background-color: {{#if realizado.parVlrRlz}} rgba(78, 207, 71, 1) {{else}}rgba(255, 71, 71, 1){{/if}};">
                        <div class="fw-bold card-header">Valor Total
                            <label class='col-form-label col-form-label-sm'>R$ {{projeto.valor}}</label>
                        </div>
                        <h2 class="text-center card-title">{{realizado.parLiqVlr}} %</h2>
                        <label class='col-form-label col-form-label-sm'>Orçado: {{projeto.parLiqVlr}} %</h4>
                    </div>
                </div>
            </a>
            <a href='/gerenciamento/dashboardrealliquido/{{realizado._id}}' style='text-decoration: none;'>
                <div class="card text-white row"
                    style="border-radius: 80px;background-color: {{#if realizado.parNfsRlz}} rgba(10, 159, 8, 1) {{else}} rgba(159, 10, 10, 1) {{/if}};">
                    <div class="fw-bold card-header">Total Faturado
                        <label clas='col-form-label col-form-label-sm'> R$ {{realizado.vlrNFS}}</label>
                    </div>
                    <h2 class="text-center card-title">{{realizado.parLiqNfs}} %</h2>
                    <label class='col-form-label col-form-label-sm'>Orçado: {{projeto.parLiqNfs}} %</label>
                </div>
            </a>
        </div>
        <div class="row mt-1 justify-content-center" style="height: 60px">
            <a href='/projeto/realizar/{{projeto._id}}' class='btn btn-primary btn-sm mb-1'> Editar </a>
            <a href='/projeto/vermais/{{projeto._id}}' class='btn btn-primary btn-sm'> Ver Mais </a>
        </div>
    </div>

    <div class="col-md-5">
        <h5 class='fw-bold mt-2'>Participação sobre o Total do Projeto Realizado</h5>
        <div style="height: 500px;">
            <canvas id='chartLL' class='mb-4' style="width: 100px; height: 100px;"></canvas>
        </div>

        <input id='parLiqVlr' name='parLiqVlr' type="hidden" value={{realizado.parLiqVlr}}>
        <input id='parDedVlr' name='parEquVlr' type="hidden" value={{realizado.parDedVlr}}>
        <input id='parImpVlr' name='parImpVlr' type="hidden" value={{realizado.parImpVlr}}>
        <input id='parISSVlr' name='parISSVlr' type="hidden" value={{realizado.parISSVlr}}>
        <input id='parComVlr' name='parComVlr' type="hidden" value={{realizado.parComVlr}}>

        <div class="row mt-2 text-center" style="height: 300px;">
            <div class="col-md-6">
                <div class='card text-white mb-3' style=" background-color:  rgba(194, 189, 188, 1); max-width: 22rem;">
                    <div class="fw-bold card-header">Deduções</div>
                    <h4>R$ {{realizado.custoPlano}}</h4>
                </div>
                <div class="card text-white mb-3" style="background-color:rgba(255, 161, 8, 1); max-width: 22rem;">
                    <div class="fw-bold card-header">Comissão</div>
                    <h4>R$ {{realizado.vlrcom}}</h4>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-white mb-3" style="max-width: 22rem; background-color: rgba(255, 49, 53, 1);">
                    <div class="fw-bold card-header">Tributos</div>
                    <h4>R$ {{realizado.totalImposto}}</h4>
                </div>
                <div class="card text-white mb-3" style="max-width: 22rem; background-color: rgba(255, 49, 53, 1);">
                    <div class="fw-bold card-header">ISS</div>
                    <h4>R$ {{realizado.impISS}}</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <h5 class='fw-bold mt-2'>Participação das Deduções sobre o Total do Projeto</h5>
        <div style="height: 500px;">
            <canvas id='chartDes' style="width: 200px; height: 200px;"></canvas>
        </div>
        <input type='hidden' id='parIntVlr' value='{{realizado.parIntVlr}}'>
        <input type='hidden' id='parGesVlr' value='{{realizado.parGesVlr}}'>
        <input type='hidden' id='parProVlr' value='{{realizado.parProVlr}}'>
        <input type='hidden' id='parDesVlr' value='{{realizado.parDesVlr}}'>
        <input type='hidden' id='parAliVlr' value='{{realizado.parAliVlr}}'>
        <input type='hidden' id='parEstVlr' value='{{realizado.parEstVlr}}'>
        <input type='hidden' id='parCmbVlr' value='{{realizado.parCmbVlr}}'>


        <div class="row mt-2 text-center">
            <div class="col-md-6">
                <div class="card text-white mb-3" style="max-width: 22rem; background-color: rgba(70, 70, 70, 1);">
                    <div class="fw-bold card-header">Instalação</div>
                    <h4>R$ {{realizado.totint}}</h4>
                </div>
                <div class="card text-white mb-3" style="max-width: 22rem; background-color: rgba(130, 130, 130, 1);">
                    <div class="fw-bold card-header">Projetista</div>
                    <h4>R$ {{realizado.totpro}}</h4>
                </div>
                {{#if realizado.parAliVlr}}
                <div class="card text-white mb-3" style="max-width: 22rem; background-color: rgba(220, 220, 220, 1);">
                    <div class="fw-bold card-header">Alimentação</div>
                    <h4>R$ {{realizado.totali}}</h4>
                </div>
                {{else}}
                {{/if}}
            </div>
            <div class="col-md-6">
                <div class="card text-white mb-3" style="max-width: 22rem; background-color: rgba(100, 100, 100, 1);">
                    <div class="fw-bold card-header">Gestão</div>
                    <h4>R$ {{realizado.totges}}</h4>
                </div>
                {{#if realizado.parDesVlr}}
                <div class="card text-white mb-3" style="max-width: 22rem; background-color: rgba(160, 160, 160, 1);">
                    <div class="fw-bold card-header">Deslocamento</div>
                    <h4>R$ {{realizado.totdes}}</h4>
                </div>
                {{else}}
                {{/if}}
                {{#if realizado.parEstVlr}}
                <div class="card text-white mb-3" style="max-width: 22rem; background-color: rgba(160, 160, 160, 1);">
                    <div class="fw-bold card-header">Estadia</div>
                    <h4>R$ {{realizado.tothtl}}</h4>
                </div>
                {{else}}
                {{/if}}
                {{#if realizado.parCmbVlr}}
                <div class="card text-white mb-3" style="max-width: 22rem; background-color: rgba(160, 160, 160, 1);">
                    <div class="fw-bold card-header">Combustível</div>
                    <h4>R$ {{realizado.totcmb}}</h4>
                </div>
                {{else}}
                {{/if}}
            </div>
        </div>
    </div>
</div>


<script type='text/javascript'>
    var parVlrRlz = document.getElementById('parLiqRlz')
    var parNfsRlz = document.getElementById('parNfsRlz')

    //Gráfico Pariticpação Lucro Liquido
    var parLiqVlr = document.getElementById('parLiqVlr')
    var parDedVlr = document.getElementById('parDedVlr')
    var parImpVlr = document.getElementById('parImpVlr')
    var parISSVlr = document.getElementById('parISSVlr')
    var parComVlr = document.getElementById('parComVlr')

    var perLL = [parLiqVlr.value,
    parDedVlr.value,
    parImpVlr.value,
    parISSVlr.value,
    parComVlr.value]

    //Gráfico Participação Despesas
    var parIntVlr = document.getElementById('parIntVlr')
    var parGesVlr = document.getElementById('parGesVlr')
    var parProVlr = document.getElementById('parProVlr')
    var parDesVlr = document.getElementById('parDesVlr')
    var parAliVlr = document.getElementById('parAliVlr')
    var parEstVlr = document.getElementById('parEstVlr')
    var parCmbVlr = document.getElementById('parCmbVlr')

    var parTraVlr
    if (parCmbVlr.value > 0) {
        parTraVlr = parCmbVlr.value
    } else {
        parTraVlr = parDesVlr.value
    }

    var perDes = [parIntVlr.value,
    parGesVlr.value,
    parProVlr.value,
    parTraVlr,
    parAliVlr.value,
    parEstVlr.value]

    var ctxLL = document.getElementById('chartLL').getContext('2d');
    var ctxDes = document.getElementById('chartDes').getContext('2d');

    var chartLL = new Chart(ctxLL, {
        type: 'doughnut',
        data: {
            labels: ['Lucro Líquido', 'Deduções', 'Tributos', 'ISS', 'Comissão'],
            datasets: [{
                data: [perLL[0],
                perLL[1],
                perLL[2],
                perLL[3],
                perLL[4]],

                backgroundColor: [
                    'rgba(71, 135, 207, 0.2)',
                    'rgba(194, 189, 188, 0.2)',
                    'rgba(255, 49, 53, 0.2)',
                    'rgba(255, 49, 53, 0.2)',
                    'rgba(255, 161, 8, 0.2)'
                ],

                borderColor: [
                    'rgba(71, 135, 207, 1)',
                    'rgba(194, 189, 188, 1)',
                    'rgba(255, 49, 53, 1)',
                    'rgba(255, 49, 53, 1)',
                    'rgba(255, 161, 8, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            animation: {
                animateScale: true
            }

        }
    });

    var chartDes = new Chart(ctxDes, {
        type: 'doughnut',
        data: {
            labels: ['Instalação', 'Gestão', 'Projetista', 'Deslocamento', 'Alimentação', 'Estadia'],
            datasets: [{
                data: [perDes[0],
                perDes[1],
                perDes[2],
                perDes[3],
                perDes[4],
                perDes[5]],

                backgroundColor: [
                    'rgba(70, 70, 70, 0.2)',
                    'rgba(90, 90, 90, 0.2)',
                    'rgba(110, 110, 110, 0.2)',
                    'rgba(130, 130, 130, 0.2)',
                    'rgba(150, 150, 150, 0.2)',
                    'rgba(180, 180, 180, 0.2)'
                ],

                borderColor: [
                    'rgba(70, 70, 70, 1)',
                    'rgba(90, 90, 90, 1)',
                    'rgba(110, 110, 110, 1)',
                    'rgba(130, 130, 130, 1)',
                    'rgba(150, 150, 150, 1)',
                    'rgba(180, 180, 180, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            animation: {
                animateScale: true
            }
        }
    });
</script>