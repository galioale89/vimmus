<style>

    .botao-menu {
        background-color: rgb(40, 55, 86);
        border: white solid 1px;
        color: white;
    }

    .botao-menu:hover {
        background-color: rgb(40, 55, 86);
        border: white 1px solid;
        font-weight: 600;
        color: white;
    }

    .ativo {
        background-color: rgb(10, 30, 68);
    }

</style>

<div style="width: 98%;padding-left: 2%;padding-top: 1%;">
    <div class="row">
        <h4 class="header">
            {{cliente.nome}} </h4>
    </div>

    <div class="btn-group  col-12 mx-auto'">
        <a href="/customdo/instalacao/{{projeto._id}}" class="btn btn-sm botao-menu"><i class="bi bi-tools"></i>
            Instalação</a>
        <a href="/customdo/projetista/{{projeto._id}}" class="btn btn-sm botao-menu"><i class="bi bi-pencil"></i>
            Projetista</a>
        <a href="/customdo/gestao/{{projeto._id}}" class="btn btn-sm botao-menu"><i class="bi bi-gear"></i>
            Gestão</a>
        <a href="/gerenciamento/{{projeto._id}}" class="btn btn-sm botao-menu"><i class="bi bi-puzzle"></i>
            Gerenciamento</a>
        <a href="/gerenciamento/tributos/{{projeto._id}}" class="btn btn-sm botao-menu ativo"><i
                class="bi bi-calculator"></i> Tributos</a>
    </div>

    <form action="/gerenciamento/tributos" method="post">

        <input type='hidden' name='id' value='{{projeto._id}}'>

        <div class='row mb-2 mt-2'>
            <div class="col-md-4">
                <div class="row">
                    <div class="card">
                        <div class="row">
                            <label class="fw-bold col-form-label col-form-label-sm contorno">Parâmetros</label>
                        </div>
                        <div class="row">
                            <div class="col-md-7">
                                <label for="estrutura" class="fw-bold col-form-label col-form-label-sm">Regime
                                    Tributário:</label>
                                <label class="fw-bold col-form-label col-form-label-sm" />Projeção Faturamento
                                ou Lucro:
                                {{#if ehSimples }}
                                <label class="fw-bold col-form-label col-form-label-sm">Fator de redução
                                    Simples:</label>
                                </label>
                                {{else}}
                                {{/if}}
                            </div>
                            <div class="col-md-5">
                                <label class='col-form-label col-form-label-sm'>{{regime.regime}}</label><br>
                                {{#if ehSimples }}
                                <label class="col-form-label col-form-label-sm">R$ {{regime.proje}}</label>
                                <label class="col-form-label col-form-label-sm">R$ {{regime.vlrred}}</label>
                                {{else}}
                                {{/if}}
                                {{#if ehLR}}
                                <label class="col-form-label col-form-label-sm">R$ {{regime.prjLR}}</label>
                                {{else}}
                                {{/if}}
                                {{#if ehLP}}
                                <label class="col-form-label col-form-label-sm">R$ {{regime.prjLP}}</label>
                                {{else}}
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="card">
                        <div class="row">
                            <label class="fw-bold col-form-label col-form-label-sm contorno">Alíquotas   </label><br>
                        </div>
                        <div class="row">
                            <div class="col-md-3 text-end">
                                <label class="fw-bold col-form-label col-form-label-sm">DAS: </label><br>
                                <label class="fw-bold col-form-label col-form-label-sm">NF-s: </label><br>
                                <label class="fw-bold col-form-label col-form-label-sm">ICMS: </label>
                            </div>
                            <div class="col-md-2">
                                <label class="col-form-label col-form-label-sm">{{regime.alqDAS}} %</label><br>
                                <label class="col-form-label col-form-label-sm">{{regime.alqNFS}} %</label><br>
                                <label class="col-form-label col-form-label-sm">{{regime.alqICMS}}%</label>
                            </div>
                            <div class="col-md-4 text-end">
                                <label class="fw-bold col-form-label col-form-label-sm">IRPJ: </label><br>
                                <label class="fw-bold col-form-label col-form-label-sm">IRPJ Adicional: </label><br>
                                <label class="fw-bold col-form-label col-form-label-sm">PIS: </label><br>
                                <label class="fw-bold col-form-label col-form-label-sm">COFINS: </label><br>
                                <label class="fw-bold col-form-label col-form-label-sm">CSLL: </label>
                            </div>
                            <div class="col-md-2">
                                <label class="col-form-label col-form-label-sm">{{regime.alqIRPJ}}%</label><br>
                                <label class="col-form-label col-form-label-sm">{{regime.alqIRPJAdd}}%</label><br>
                                <label class="col-form-label col-form-label-sm">{{regime.alqPIS}}%</label><br>
                                <label class="col-form-label col-form-label-sm">{{regime.alqCOFINS}}%</label><br>
                                <label class="col-form-label col-form-label-sm">{{regime.alqCSLL}}%</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="btn-group col-12 gap-2 mt-4">
                    <a href='/gerenciamento/dashboard/{{projeto._id}}' class='btn btn-sm btn-primary'>
                        <i class="bi bi-bar-chart"></i> Dashboard</a>
                    <button type='submit' class='btn btn-sm btn-success'> <i class="bi bi-check-circle"></i>
                        Aplicar</button>
                    <a href='/menu' class='btn btn-sm btn-primary'> <i class="bi bi-back"></i> Voltar ao Menu</a>
                </div>

            </div>
            <div class="col-md-3 card">
                <div class="row">
                    <label class="fw-bold col-form-label col-form-label-sm contorno">Valores dos Tributos
                    </label>
                </div>
                <div class="row">
                    <div class="col-md-5 text-end">
                        <label class="fw-bold col-form-label col-form-label-sm">DAS: </label><br>
                        <label class="fw-bold col-form-label col-form-label-sm">ISS: </label><br>
                        <label class="fw-bold col-form-label col-form-label-sm">IRPJ: </label><br>
                        <label class="fw-bold col-form-label col-form-label-sm">IRPJ Adicional: </label><br>
                        <label class="fw-bold col-form-label col-form-label-sm">CSLL: </label><br>
                        <label class="fw-bold col-form-label col-form-label-sm col-md-5">PIS: </label><br>
                        <label class="fw-bold col-form-label col-form-label-sm">COFINS: </label><br>
                        <label class="fw-bold col-form-label col-form-label-sm">ICMS: </label><br>
                        <label class="fw-bold col-form-label col-form-label-sm">Total: </label><br>
                    </div>
                    <div class="col-md-7">
                        <label class="col-form-label col-form-label-sm">R$ {{projeto.impostoSimples}}</label><br>
                        <label class="col-form-label col-form-label-sm">R$ {{projeto.impNFS}}</label><br>
                        <label class="col-form-label col-form-label-sm">R$ {{projeto.impostoIRPJ}}</label><br>
                        <label class="col-form-label col-form-label-sm">R$ {{projeto.impostoAdd}} </label><br>
                        <label class="col-form-label col-form-label-sm">R$ {{projeto.impostoCSLL}} </label><br>
                        <label class="col-form-label col-form-label-sm">R$ {{projeto.impostoPIS}} </label><br>
                        <label class="col-form-label col-form-label-sm">R$ {{projeto.impostoCOFINS}} </label><br>
                        <label class="col-form-label col-form-label-sm">R$ {{projeto.impostoICMS}} </label><br>
                        <label class="col-form-label col-form-label-sm">R$ {{projeto.totalImposto}} </label><br>
                    </div>
                </div>
                
            </div>

            <div class="col-md-5 contorno-titulo" style="font-size: 20px;">
                <label class='fw-bold col-form-label'>Demonstrativo</label>
                <div class="row" style="font-size: 20px;">
                    <div class="col-md-6 text-end">
                        <label class="fw-bold col-form-label col-form-label-sm">Valor Faturado:</label><br>
                        <label class='fw-bold col-md-7 col-form-label col-form-label-sm'>(+)Total do
                            Projeto:</label><br>
                        <label class='fw-bold col-md-7 col-form-label col-form-label-sm'>(-)Custos
                            Totais:</label><br>
                        <label class='col-md-7 col-form-label col-form-label-sm'>Custo Planejado: </label><br>
                        <label class='col-form-label col-form-label-sm'>Custo Kit Gerador: </label><br>
                        <label class='fw-bold col-md-7 col-form-label col-form-label-sm'>(=)Lucro Bruto:
                        </label><br>
                        <label class='col-md-7 col-form-label  col-form-label-sm'>(-)Comissão:
                            ({{projeto.percom}}%)</label><br>
                        <label class='fw-bold col-md-7 col-form-label col-form-label-sm'>(=)LAI:</label><br>
                        <label class=' col-md-7 col-form-label col-form-label-sm'>(-)Tributos: </label>
                        <label class='fw-bold col-md-7 col-form-label col-form-label-sm'>(-)Lucro Líquido: </label>
                    </div>
                    <div class="col-md-5 text-start">
                        <label class='fw-bold col-form-label col-form-label-sm'>R$ {{projeto.vlrNFS}}</label><br>
                        <label class='fw-bold col-form-label col-form-label-sm'>R$ {{projeto.valor}}</label><br>
                        <label class='fw-bold col-form-label col-form-label-sm'>R$ {{projeto.custoTotal}}</label><br>
                        <label class='col-form-label col-form-label-sm'>R$
                            {{projeto.custoPlano}}</label><br>
                        <label class='col-form-label col-form-label-sm'>R$ {{projeto.vlrkit}}</label><br>
                        <label class='fw-bold col-form-label col-form-label-sm'>R$
                            {{projeto.lucroBruto}}</label><br>
                        <label class='col-form-label col-form-label-sm'>R$ {{projeto.vlrcom}}</label><br>
                        <label class='fw-bold col-form-label col-form-label-sm'>R$ {{projeto.lbaimp}}</label><br>
                        <label class='col-form-label col-form-label-sm'>R$ {{projeto.totalImposto}}</label><br>
                        <label class='fw-bold col-form-label col-form-label-sm'>R$
                            {{projeto.lucroLiquido}}</label>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>