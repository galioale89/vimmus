<div style="width: 1300px; margin-left: 30px;">
    <input type='hidden' id='ehDireto'value='{{projeto.ehDireto}}'>
    <div class="row mt-2">
        <div class="col-md-2">
            <div class="row text-center"
                style="width: 220px; height: 400px; border-radius: 15px; border:solid 1px; border-color: rgba(220,220,220,1);">
                <font face='Trebuchet MS'>
                    <h5 class='fw-bold mt-2'>Lucro Líquido</h5>
                        <div class="card text-white" style="background-color: {{#if realizado.varLucRlz}}rgb(71, 114, 207) {{else}}rgb(255, 70, 70){{/if}}; width: 175px; margin-left: 10px;">
                            <h4 class='text-center mt-4'>R$ {{realizado.lucroLiquido}}</h4>
                            <label class='col-form-label col-form-label-sm text-end' style='margin-right: 10px'>Orçado: R$ {{projeto.lucroLiquido}}</label>
                        </div>                         
                </font>
                <a href='/gerenciamento/dashboardreal/{{realizado._id}}' style='text-decoration: none;'>
                    <div class="row text-center mb-2 mt-2" style="margin-left: 10px; margin-right: 10px;">
                        <div class="card text-white" style="background-color: {{#if realizado.parVlrRlz}} rgba(78, 207, 71, 1) {{else}}rgba(255, 71, 71, 1){{/if}};">
                            <div class="fw-bold card-header  text-center">Valor Total</div>
                            <h2 class="text-center card-title">{{realizado.parLiqVlr}} %</h2>
                            <label class='col-form-label col-form-label-sm text-end'>Orçado: {{projeto.parLiqVlr}} %</h4>
                        </div>
                    </div>
                </a>
                <a href='/gerenciamento/dashboardrealliquido/{{realizado._id}}' style='text-decoration: none;'>
                    <div class="row text-center mb-2" style="margin-left:10px ;margin-right: 10px;">
                        <div class="card text-white" style="background-color: {{#if realizado.parNfsRlz}} rgba(10, 159, 8, 1) {{else}} rgba(159, 10, 10, 1) {{/if}};">
                            <div class="fw-bold card-header">Total Faturado</div>
                            <h2 class="text-center card-title">{{realizado.parLiqNfs}} %</h2>
                            <label class='col-form-label col-form-label-sm text-end'>Orçado: {{projeto.parLiqNfs}} %</label>
                        </div>
                    </div>
                </a>
            </div>
            <div class='row mt-2'>
                <div
                    style="width: 220px; height: 70px; border-radius: 15px; border:solid 1px; border-color: rgba(220,220,220,1);">
                    <div class="row mt-1">
                        <div class="col-md-6">
                            <label class='fw-bold col-form-label col-form-label-sm'>Faturado: </label>
                        </div>
                        <div class="col-md-5">
                            <label class='col-form-label col-form-label-sm'>R$ {{realizado.vlrNFS}}<label>
                        </div>
                    </div>        
                    <div class="row">
                        <div class="col-md-6">
                            <label class='fw-bold col-form-label col-form-label-sm'>Total: </label>
                        </div>
                        <div class="col-md-5">
                            <label class='col-form-label col-form-label-sm'>R$ {{projeto.valor}}<label>
                        </div>
                    </div>                                      
                </div>
            </div>
            <div class="row mt-2">
                <div style="width: 220px; height: 60px">
                    <div class="row">
                        <a href='/projeto/realizar/{{projeto._id}}' class='btn btn-primary mb-1 btn-sm'> Editar </a>
                        <a href='/projeto/vermais/{{projeto._id}}' class='btn btn-primary btn-sm'> Ver Mais </a>
                    </div>
                </div>
            </div>

        </div>


        <div class="col-md-5 card">
            <font face='Trebuchet MS' style="font-size: 5px;">
                <h5 class='fw-bold mt-2'>Participação sobre o Total Faturado Realizado</h5>
            </font>
            <div style="height: 500px;">
            <canvas id='chartLL' class='mb-4' style="width: 100px; height: 100px;"></canvas>
            </div>
            <input id='parLiqNfs' name='parLiqNfs' type="hidden" value={{realizado.parLiqNfs}}>
            <input id='parDedNfs' name='parEquNfs' type="hidden" value={{realizado.parDedNfs}}>
            <input id='parImpNfs' name='parImpNfs' type="hidden" value={{realizado.parImpNfs}}>
            <input id='parISSNfs' name='parISSNfs' type="hidden" value={{realizado.parISSNfs}}>
            <input id='parComNfs' name='parComNfs' type="hidden" value={{realizado.parComNfs}}>

            <div class="container text-center mt-4">
                <div class="row">
                    <div class="col-md-6">
                        <div class='card text-white mb-3'
                            style=" background-color: rgba(194, 189, 188, 1); max-width: 22rem;">
                            <div class="fw-bold card-header">Deduções</div>
                            <h4>R$ {{realizado.custoPlano}}</h4>
                        </div>
                        <div class="card text-white mb-3"
                            style="background-color:rgba(255, 161, 8, 1); max-width: 22rem;">
                            <div class="fw-bold card-header">Comissão</div>
                            <h4>R$ {{realizado.vlrcom}}</h4>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card text-white mb-3"
                            style="max-width: 22rem; background-color: rgba(255, 49, 53, 1);">
                            <div class="fw-bold card-header">Tributos</div>
                            <h4>R$ {{realizado.totalImposto}}</h4>
                        </div>
                        <div class="card text-white mb-3"
                            style="max-width: 22rem; background-color: rgba(255, 49, 53, 1);">
                            <div class="fw-bold card-header">ISS</div>
                            <h4>R$ {{realizado.impISS}}</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5 card">
            <font face='Trebuchet MS'>
                <h5 class='fw-bold mt-2'>Participação das Deduções sobre o Total Faturado</h5>
            </font>
            <div style="height: 500px;">
            <canvas id='chartDes' style="width: 200px; height: 200px;"></canvas>
            </div>

            <input type='hidden' id='parIntNfs' value='{{realizado.parIntNfs}}'>
            <input type='hidden' id='parGesNfs' value='{{realizado.parGesNfs}}'>
            <input type='hidden' id='parProNfs' value='{{realizado.parProNfs}}'>
            <input type='hidden' id='parDesNfs' value='{{realizado.parDesNfs}}'>
            <input type='hidden' id='parAliNfs' value='{{realizado.parAliNfs}}'>
            <input type='hidden' id='parEstNfs' value='{{realizado.parEstNfs}}'>

            <div class="container text-center mt-4">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card text-white mb-3"
                            style="max-width: 22rem; background-color: rgba(70, 70, 70, 1);">
                            <div class="fw-bold card-header">Instalação</div>
                            <h4>R$ {{realizado.totint}}</h4>
                        </div>
                        <div class="card text-white mb-3"
                            style="max-width: 22rem; background-color: rgba(130, 130, 130, 1);">
                            <div class="fw-bold card-header">Projetista</div>
                            <h4>R$ {{realizado.totpro}}</h4>
                        </div>
                       {{#if realizado.parAliNfs}}
                        <div class="card text-white mb-3"
                            style="max-width: 22rem; background-color: rgba(220, 220, 220, 1);">
                            <div class="fw-bold card-header">Alimentação</div>
                            <h4>R$ {{realizado.totali}}</h4>
                        </div>
                        {{else}}
                        {{/if}}                        
                    </div>
                    <div class="col-md-6">
                        <div class="card text-white mb-3"
                            style="max-width: 22rem; background-color: rgba(100, 100, 100, 1);">
                            <div class="fw-bold card-header">Gestão</div>
                            <h4>R$ {{realizado.totges}}</h4>
                        </div>                    
                        {{#if realizado.parDesNfs}}
                        <div class="card text-white mb-3"
                            style="max-width: 22rem; background-color: rgba(160, 160, 160, 1);">
                            <div class="fw-bold card-header">Deslocamento</div>
                            <h4>R$ {{realizado.totdes}}</h4>
                        </div>
                        {{else}}
                        {{/if}}                        
                        {{#if realizado.parEstNfs}}
                        <div class="card text-white mb-3"
                            style="max-width: 22rem; background-color: rgba(160, 160, 160, 1);">
                            <div class="fw-bold card-header">Estadia</div>
                            <h4>R$ {{realizado.tothtl}}</h4>
                        </div>
                        {{else}}
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type='text/javascript'>
        ehDireto = document.getElementById(ehDireto)
        //Gráfico Pariticpação Lucro Liquido
        const parLiqNfs = document.getElementById('parLiqNfs')
        const parDedNfs = document.getElementById('parDedNfs')
        const parImpNfs = document.getElementById('parImpNfs')
        const parISSNfs = document.getElementById('parISSNfs')
        const parComNfs = document.getElementById('parComNfs')

        const perLL = [parLiqNfs.value,
        parDedNfs.value,
        parImpNfs.value,
        parISSNfs.value,
        parComNfs.value]

        //Gráfico Participação Despesas
        const parIntNfs = document.getElementById('parIntNfs')
        const parGesNfs = document.getElementById('parGesNfs')
        const parProNfs = document.getElementById('parProNfs')
        const parDesNfs = document.getElementById('parDesNfs')
        const parAliNfs = document.getElementById('parAliNfs')
        const parEstNfs = document.getElementById('parEstNfs')

        const perDes = [parIntNfs.value,
        parGesNfs.value,
        parProNfs.value,
        parDesNfs.value,
        parAliNfs.value,
        parEstNfs.value]

        var ctxLL = document.getElementById('chartLL').getContext('2d');
        var ctxDes = document.getElementById('chartDes').getContext('2d');

        var chartLL = new Chart(ctxLL, {
            type: 'doughnut',
            data: {
                labels: ['Lucro Líquido', 'Deduções', 'Tributos', 'ISS', 'Comissão'],
                datasets: [{
                    data: [perLL[0],
                    perLL[1],
                    perLL[2],
                    perLL[3],
                    perLL[4]],

                    backgroundColor: [
                        'rgba(71, 135, 207, 0.2)',
                        'rgba(194, 189, 188, 0.2)',
                        'rgba(255, 49, 53, 0.2)',
                        'rgba(255, 49, 53, 0.2)',
                        'rgba(255, 161, 8, 0.2)'
                    ],

                    borderColor: [
                        'rgba(71, 135, 207, 1)',
                        'rgba(194, 189, 188, 1)',
                        'rgba(255, 49, 53, 1)',
                        'rgba(255, 49, 53, 1)',
                        'rgba(255, 161, 8, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
            }
        });

        var chartDes = new Chart(ctxDes, {
            type: 'doughnut',
            data: {
                labels: ['Instalação', 'Gestão', 'Projetista', 'Deslocamento', 'Alimentação', 'Estadia'],
                datasets: [{
                    data: [perDes[0],
                    perDes[1],
                    perDes[2],
                    perDes[3],
                    perDes[4],
                    perDes[5]],

                    backgroundColor: [
                        'rgba(70, 70, 70, 0.2)',
                        'rgba(90, 90, 90, 0.2)',
                        'rgba(110, 110, 110, 0.2)',
                        'rgba(130, 130, 130, 0.2)',
                        'rgba(150, 150, 150, 0.2)',
                        'rgba(180, 180, 180, 0.2)'
                    ],

                    borderColor: [
                        'rgba(70, 70, 70, 1)',
                        'rgba(90, 90, 90, 1)',
                        'rgba(110, 110, 110, 1)',
                        'rgba(130, 130, 130, 1)',
                        'rgba(150, 150, 150, 1)',
                        'rgba(180, 180, 180, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                animation: {
                    animateScale: true
                }
            }
        });
    </script>