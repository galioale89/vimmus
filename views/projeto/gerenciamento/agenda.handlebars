<script>
    function dia(d) {
        var dia = document.getElementById('dia')
        lista_cliente = document.getElementsByName('cliente[]')
        const { value: cliente } = await Swal.fire({
            title: 'Escolha um cliente',
            input: 'select',
            inputOptions: {
                lista_cliente
            },
            inputPlaceholder: 'Cliente',
            showCancelButton: true,
            inputValidator: (value) => {
                return new Promise((resolve) => {
                    if (value != '') {
                        resolve()
                    } else {
                        resolve('É necessário informar um cliente :)')
                    }
                })
            }
        })

        if (cliente) {
            dia.value = d
        }
        
    }            
</script>