<style>
    table {
        border: 1px solid black;
        text-align: center;
        width: 100%;
    }

    tr {
        border: 1px solid black;
        text-align: center;
    }

    th {
        border: 1px solid black;
        text-align: center;
    }

    td {
        border: 1px solid black;
        text-align: center;
    }
    input{
        font-size: 14px;
        text-align: center;
    }
    label{
        font-size: 14px;
        padding: 5px;
    }
