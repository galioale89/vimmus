<nav {{#if user}}id='menu-fixo-user' {{else}}id='menu-fixo' {{/if}} class='navbar navbar-expand-lg' style="position: fixed;z-index: 999;text-decoration: none;width: 100%;">
  <div class="container-fluid">
    {{#each user}}
    <h6 class="fw-bold" style="color: white;"> {{#if nome}} Olá {{nome}},
      {{/if}}
    </h6>
    {{else}}
    <div class="collapse navbar-collapse">
      <ul class='navbar-nav mb-2 mb-lg-0'>
        <li>
          <a id='titulo-inicio' class="nav-link fw-bold" {{#if user}}style="color: white" {{else}}{{/if}} href="/">Início</a>
        </li>
        <li>
          <a id='titulo-beneficio' class="nav-link fw-bold" {{#if user}}style="color: white" {{else}} {{/if}}
            href="/beneficios">Benefícios</a>
        </li>
        <li>
          <a id='titulo-avimmus' class="nav-link fw-bold" {{#if user}}style="color: white" {{else}} {{/if}} href="/quem">A VIMMUS</a>
        </li>
      </ul>
    </div>
    {{/each}}

    <div class="collapse navbar-collapse d-flex justify-content-end">
      <!-- Default dropstart button -->
      {{#if user}}
      <div class="dropstart">
        <button class="filter" data-bs-toggle="dropdown" aria-expanded="false"><i class='bi bi-filter'></i>
        </button>
        <ul class="dropdown-menu">
          <a href='/projeto/novo' class="botao-filter"><i class="bi bi-file-arrow-up"></i> Novo Projeto</a><br>
          <a href='/projeto/consulta' class="botao-filter"><i class="bi bi-search"></i> Busca Projeto</a><br>
          <a href='/menu' class="botao-filter"><i class='bi bi-menu-button-wide'></i> Menu</a><br>
          <a href='/logout' class="botao-filter">Sair</a>
        </ul>
      </div>
      {{else}}
      <a href="/usuario/login" class="login"><i class='bi bi-file-earmark-person'></i>
        Login</a>
      {{/if}}
    </div>
  </div>
</nav>
<div>
  <br>
  .
  <br>
</div>
<script>
  (function () {
    var menu = document.getElementById('menu-fixo'); // colocar em cache
    var titulo_inicio = document.getElementById('titulo-inicio');
    var titulo_beneficio = document.getElementById('titulo-beneficio');
    var titulo_avimmus = document.getElementById('titulo-avimmus');
    window.addEventListener('scroll', function () {
      if (window.scrollY > 50) {
        titulo_inicio.classList.add('titulo-mov');
        titulo_beneficio.classList.add('titulo-mov');
        titulo_avimmus.classList.add('titulo-mov');
        menu.classList.add('menu-before');
      } else {
        titulo_inicio.classList.remove('titulo-mov');
        titulo_beneficio.classList.remove('titulo-mov');
        titulo_avimmus.classList.remove('titulo-mov');        
        menu.classList.remove('menu-before');
      }
    });
  })();
</script>